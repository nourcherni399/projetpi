{% extends 'layouts/admin.html.twig' %}

{% block title %}Événements - AutiCare Admin{% endblock %}

{% block admin_content %}
<h1 class="text-2xl font-semibold text-[#4B5563] mb-6">Gestion des événements</h1>
{% for message in app.flashes('success') %}
    <div class="mb-4 px-4 py-3 rounded-lg bg-emerald-50 border border-emerald-200 text-emerald-800">{{ message }}</div>
{% endfor %}
<div class="bg-white rounded-xl border border-[#E5E0D8] overflow-hidden">
    <div class="p-4 border-b border-[#E5E0D8] flex flex-wrap gap-4 justify-between">
        <input type="search" placeholder="Rechercher un événement…" class="px-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7] max-w-xs">
        <a href="{{ path('admin_evenement_new') }}" class="px-4 py-2 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">Nouvel élément</a>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead class="bg-[#F5F1EB] border-b border-[#E5E0D8]">
                <tr>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Titre</th>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Date</th>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Lieu</th>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Thématique</th>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-[#E5E0D8]">
                {% for event in evenements %}
                <tr class="hover:bg-[#F5F1EB]/50">
                    <td class="px-6 py-4 text-[#4B5563]">{{ event.title }}</td>
                    <td class="px-6 py-4 text-[#6B7280]">{{ event.dateEvent ? event.dateEvent|date('d/m/Y') : '—' }} {{ event.heureDebut ? event.heureDebut|date('H:i') : '' }}</td>
                    <td class="px-6 py-4 text-[#6B7280]">{{ event.lieu }}</td>
                    <td class="px-6 py-4 text-[#6B7280]">{{ event.thematique ? event.thematique.nomThematique : '—' }}</td>
                    <td class="px-6 py-4"><span class="text-[#6B7280] text-sm">—</span></td>
                </tr>
                {% else %}
                <tr><td colspan="5" class="px-6 py-8 text-center text-[#6B7280]">Aucun événement.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
