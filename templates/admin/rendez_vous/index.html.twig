{% extends 'layouts/admin.html.twig' %}

{% block title %}Rendez-vous - AutiCare Admin{% endblock %}

{% block admin_content %}
<div class="space-y-6">
    <div class="bg-gradient-to-r from-[#4B5563] via-[#6B7280] to-[#9CA3AF] rounded-2xl p-8 text-white shadow-xl hover:shadow-2xl transition-all duration-300">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-4xl font-bold mb-3 flex items-center gap-3">
                    <svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Gestion des rendez-vous
                </h1>
                <p class="text-gray-200 text-lg">Administration de toutes les consultations</p>
            </div>
            <div class="text-center bg-white/20 backdrop-blur-sm rounded-xl p-6">
                <div class="text-5xl font-bold">{{ rendez_vous_list|length }}</div>
                <div class="text-sm text-gray-200 mt-2">Total rendez-vous</div>
            </div>
        </div>
    </div>

    {% for message in app.flashes('success') %}
    <div class="mb-6 p-4 bg-gradient-to-r from-green-50 to-emerald-100 border border-green-200 rounded-xl shadow-lg">
        <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-green-800 font-medium">{{ message }}</span>
        </div>
    </div>
    {% endfor %}

    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
        <div class="flex flex-wrap gap-4 items-center justify-between">
            <div class="flex items-center gap-3 flex-1">
                <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <input type="search" placeholder="Rechercher un patient, un médecin..." class="flex-1 px-4 py-3 rounded-xl border border-gray-300 bg-gray-50 text-gray-700 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#4B5563] focus:border-[#4B5563] transition-all">
            </div>
            <div class="flex items-center gap-3">
                <select class="px-4 py-3 rounded-xl border border-gray-300 bg-gray-50 text-gray-700 focus:outline-none focus:ring-2 focus:ring-[#4B5563] focus:border-[#4B5563] transition-all">
                    <option value="">Tous les statuts</option>
                    <option value="confirmer">Confirmés</option>
                    <option value="en_attente">En attente</option>
                    <option value="annuler">Annulés</option>
                </select>
                <a href="{{ path('admin_rendez_vous_new') }}" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-[#4B5563] to-[#6B7280] text-white font-semibold rounded-xl hover:from-[#6B7280] hover:to-[#9CA3AF] hover:shadow-lg transition-all duration-300">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-2H4a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 002-2z" />
                    </svg>
                    Nouveau rendez-vous
                </a>
            </div>
        </div>
    </div>

    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
        <div class="bg-gradient-to-r from-gray-50 to-gray-100 px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-800 flex items-center gap-3">
                <svg class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 00-2-2h-2a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                Liste des rendez-vous
            </h2>
        </div>

        <div class="overflow-x-auto">
            {% if rendez_vous_list is empty %}
            <div class="text-center py-16">
                <svg class="w-20 h-20 mx-auto text-gray-400 mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12A2 2 0 002 2z" />
                </svg>
                <h3 class="text-2xl font-semibold text-gray-600 mb-3">Aucun rendez-vous trouvé</h3>
                <p class="text-gray-500 text-lg">Il n'y a actuellement aucun rendez-vous dans le système.</p>
                <div class="mt-6">
                    <a href="{{ path('admin_rendez_vous_new') }}" class="inline-flex items-center gap-3 px-8 py-4 bg-gradient-to-r from-[#4B5563] to-[#6B7280] text-white font-semibold rounded-xl hover:from-[#6B7280] hover:to-[#9CA3AF] hover:shadow-lg transition-all duration-300">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-2H4a2 2 0 00-2 2v12a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 002-2z" />
                        </svg>
                        Créer le premier rendez-vous
                    </a>
                </div>
            </div>
            {% else %}
            <table class="w-full">
                <thead class="bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Patient</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Médecin</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Motif</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for rdv in rendez_vous_list %}
                    <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200">
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center gap-2 px-3 py-1 bg-gray-100 text-gray-700 rounded-lg text-sm font-mono">#{{ rdv.id }}</span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-[#4B5563] to-[#6B7280] flex items-center justify-center text-white font-bold shadow-lg">
                                    {{ (rdv.nom|default('N'))|first|upper }}{{ (rdv.prenom|default('P'))|first|upper }}
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900 text-lg">{{ rdv.prenom }} {{ rdv.nom }}</div>
                                    {% if rdv.email %}
                                    <div class="text-sm text-gray-600">{{ rdv.email }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            {% if rdv.medecin %}
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-[#9CA3AF] to-[#A7C7E7] flex items-center justify-center text-white font-bold shadow-lg">
                                    {{ rdv.medecin.nom|first|upper }}{{ rdv.medecin.prenom|first|upper }}
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">{{ rdv.medecin.prenom }} {{ rdv.medecin.nom }}</div>
                                    <div class="text-sm text-gray-600">{{ rdv.medecin.specialite ?? 'Médecin' }}</div>
                                </div>
                            </div>
                            {% else %}
                            <span class="text-gray-400">—</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            {% if rdv.date is defined and rdv.date %}
                            <div class="text-gray-900 font-medium">{{ rdv.date|date('d/m/Y') }}{% if rdv.heure is defined and rdv.heure %} {{ rdv.heure|date('H:i') }}{% endif %}</div>
                            {% elseif rdv.dateRdv is defined and rdv.dateRdv %}
                            <div class="text-gray-900 font-medium">{{ rdv.dateRdv|date('d/m/Y à H:i') }}</div>
                            {% else %}
                            <span class="text-gray-400">—</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            {% set statutVal = rdv.statut is defined ? (rdv.statut.value is defined ? rdv.statut.value : rdv.statut) : '' %}
                            {% set statutLabel = rdv.getStatutLabel is defined ? rdv.getStatutLabel() : (statutVal|title) %}
                            <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-semibold border
                                {% if statutVal == 'accepte' or statutVal == 'confirmer' %}bg-green-100 text-green-800 border-green-300
                                {% elseif statutVal == 'en_attente' %}bg-amber-100 text-amber-800 border-amber-300
                                {% elseif statutVal == 'annule' or statutVal == 'annuler' %}bg-red-100 text-red-800 border-red-300
                                {% else %}bg-gray-100 text-gray-800 border-gray-300{% endif %}">
                                {{ statutLabel }}
                            </span>
                        </td>
                        <td class="px-6 py-4">
                            {% if rdv.motif %}
                            <span class="inline-flex items-center gap-2 px-3 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm">{{ rdv.motif.value is defined ? rdv.motif.value|title : rdv.motif }}</span>
                            {% else %}
                            <span class="text-gray-400">—</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                <a href="{{ path('admin_rendez_vous_edit', { id: rdv.id }) }}" class="inline-flex items-center gap-2 px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors">Modifier</a>
                                <form method="post" action="{{ path('admin_rendez_vous_delete', { id: rdv.id }) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce rendez-vous ?');" class="inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete_rdv_' ~ rdv.id) }}">
                                    <button type="submit" class="inline-flex items-center gap-2 px-3 py-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors">Supprimer</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}