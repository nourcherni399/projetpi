{% extends 'layouts/admin.html.twig' %}

{% block title %}Rendez-vous - AutiCare Admin{% endblock %}

{% block admin_content %}
<h1 class="text-2xl font-semibold text-[#4B5563] mb-6">Gestion des rendez-vous</h1>
{% for message in app.flashes('success') %}
    <div class="mb-4 px-4 py-3 rounded-lg bg-emerald-50 border border-emerald-200 text-emerald-800">{{ message }}</div>
{% endfor %}
<div class="bg-white rounded-xl border border-[#E5E0D8] overflow-hidden">
    <div class="p-4 border-b border-[#E5E0D8] flex flex-wrap gap-4 justify-between">
        <input type="search" placeholder="Rechercher…" class="px-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7] max-w-xs">
        <a href="{{ path('admin_rendez_vous_new') }}" class="px-4 py-2 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">Nouveau Rendez-Vous</a>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full text-left">
            <thead class="bg-[#F5F1EB] border-b border-[#E5E0D8]">
                <tr>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Patient</th>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Médecin</th>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Statut</th>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Motif</th>
                    <th class="px-6 py-4 font-medium text-[#4B5563]">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-[#E5E0D8]">
                {% for rdv in rendez_vous_list %}
                <tr class="hover:bg-[#F5F1EB]/50">
                    <td class="px-6 py-4 text-[#4B5563]">{{ rdv.nom }} {{ rdv.prenom }}</td>
                    <td class="px-6 py-4 text-[#6B7280]">{% if rdv.medecin %}{{ rdv.medecin.prenom }} {{ rdv.medecin.nom }}{% else %}—{% endif %}</td>
                    <td class="px-6 py-4 text-[#6B7280]">{{ rdv.status ? rdv.status.value : '—' }}</td>
                    <td class="px-6 py-4 text-[#6B7280]">{{ rdv.motif ? rdv.motif.value : '—' }}</td>
                    <td class="px-6 py-4"><span class="text-[#6B7280] text-sm">—</span></td>
                </tr>
                {% else %}
                <tr><td colspan="5" class="px-6 py-8 text-center text-[#6B7280]">Aucun rendez-vous.</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
