{% extends 'layouts/admin.html.twig' %}

{% block title %}Confirmer la suppression - AutiCare Admin{% endblock %}

{% block admin_content %}
<div class="max-w-2xl mx-auto">
    <div class="bg-white rounded-xl border border-[#E5E0D8] p-8">
        <div class="mb-6">
            <svg class="w-16 h-16 text-red-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4v2m0 0v2m0-6v-2m0 0V7a2 2 0 012-2h2.586a1 1 0 00.707-.293l-2.414-2.414a1 1 0 00-.707-.293H12a2 2 0 00-2 2v2m0 0H7a2 2 0 00-2 2v2m0 0v2a2 2 0 002 2h2m6-4V7m0 4v6m0 0v2a2 2 0 01-2 2h-2.586a1 1 0 01-.707-.293l2.414-2.414a1 1 0 01.707-.293H12a2 2 0 002-2v-2m0 0h5a2 2 0 002-2v-2a2 2 0 00-2-2h-2" />
            </svg>
            <h1 class="text-2xl font-semibold text-[#4B5563] mb-2 text-center">Êtes-vous sûr ?</h1>
            <p class="text-center text-[#6B7280] mb-6">Voulez-vous vraiment supprimer ce produit ?</p>
        </div>

        <div class="bg-[#F5F1EB] rounded-lg p-6 mb-8">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    {% if produit.image %}
                        <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" class="w-full h-auto object-cover rounded-lg">
                    {% else %}
                        <div class="w-full aspect-square bg-[#E5E0D8] rounded-lg flex items-center justify-center text-[#9CA3AF]">Pas d'image</div>
                    {% endif %}
                </div>
                <div>
                    <div class="mb-4">
                        <p class="text-sm font-medium text-[#4B5563] mb-1">Produit</p>
                        <p class="text-lg font-semibold text-[#4B5563]">{{ produit.nom }}</p>
                    </div>
                    
                    {% if produit.description %}
                    <div class="mb-4">
                        <p class="text-sm font-medium text-[#4B5563] mb-1">Description</p>
                        <p class="text-[#6B7280] text-sm">{{ produit.description }}</p>
                    </div>
                    {% endif %}

                    <div class="mb-4">
                        <p class="text-sm font-medium text-[#4B5563] mb-1">Catégorie</p>
                        <p class="text-[#6B7280]">{{ produit.categorie ? produit.categorie.label : '—' }}</p>
                    </div>

                    <div>
                        <p class="text-sm font-medium text-[#4B5563] mb-1">Prix</p>
                        <p class="text-lg font-semibold text-[#A7C7E7]">{{ produit.prix|number_format(2, ',', ' ') }} د.ت</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-8">
            <p class="text-red-800 text-sm">
                <strong>Attention :</strong> Cette action est irréversible. Le produit sera supprimé de la base de données.
            </p>
        </div>

        <div class="flex gap-3">
            <form method="POST" action="{{ path('admin_produit_delete', {id: produit.id}) }}" class="flex-1">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                <button type="submit" class="w-full px-5 py-3 rounded-lg bg-red-500 text-white font-medium hover:bg-red-600 focus:outline focus:ring-2 focus:ring-red-500">
                    Oui, supprimer le produit
                </button>
            </form>
            <a href="{{ path('admin_produit_index') }}" class="flex-1 px-5 py-3 rounded-lg border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB] focus:outline focus:ring-2 focus:ring-[#A7C7E7] text-center">
                Annuler
            </a>
        </div>
    </div>
</div>
{% endblock %}
