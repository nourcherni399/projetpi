{% extends 'layouts/admin.html.twig' %}

{% block title %}Produits - AutiCare Admin{% endblock %}

{% block admin_content %}
<h1 class="text-2xl font-semibold text-[#4B5563] mb-6">Gestion des produits</h1>
{% for message in app.flashes('success') %}
    <div class="mb-4 px-4 py-3 rounded-lg bg-emerald-50 border border-emerald-200 text-emerald-800">{{ message }}</div>
{% endfor %}
<div class="bg-white rounded-xl border border-[#E5E0D8] overflow-hidden">
    <div class="p-4 border-b border-[#E5E0D8] flex flex-wrap gap-4 justify-between items-center">
        <div class="flex items-center gap-4">
            <form method="GET" action="{{ path('admin_produit_index') }}" class="flex items-center gap-2">
                <input type="search" name="search" placeholder="Rechercher un produit…" value="{{ search|default('') }}" class="px-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] max-w-xs">
                <button type="submit" class="px-3 py-2 rounded-lg border border-[#E5E0D8] text-[#6B280] hover:bg-[#F5F1EB]">
                    Rechercher
                </button>
                {% if search|default('') != '' %}
                    <a href="{{ path('admin_produit_index') }}" class="px-3 py-2 rounded-lg border border-[#E5E0D8] text-[#6B280] hover:bg-[#F5F1EB]">
                        Effacer
                    </a>
                {% endif %}
            </form>
            <div class="flex flex-col md:flex-row items-start md:items-center gap-4">
                <div class="flex flex-col md:flex-row items-start md:items-center gap-3">
                    <div class="relative">
                        <div class="flex items-center space-x-3">
                            <!-- Tri par nom -->
                            <div class="flex bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
                                <a href="{{ path('admin_produit_index', {sortBy: 'nom', sortOrder: 'asc'}) }}" class="px-4 py-2.5 text-sm font-medium transition-all duration-200 flex items-center gap-2 {% if sortBy == 'nom' and sortOrder == 'asc' %}bg-blue-500 text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
                                    </svg>
                                    <span>A→Z</span>
                                </a>
                                <a href="{{ path('admin_produit_index', {sortBy: 'nom', sortOrder: 'desc'}) }}" class="px-4 py-2.5 text-sm font-medium transition-all duration-200 flex items-center gap-2 {% if sortBy == 'nom' and sortOrder == 'desc' %}bg-blue-500 text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h9m5-4v12m0 0l-4-4m4 4l4-4"></path>
                                    </svg>
                                    <span>Z→A</span>
                                </a>
                            </div>
                            
                            <!-- Tri par prix -->
                            <div class="flex bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
                                <a href="{{ path('admin_produit_index', {sortBy: 'prix', sortOrder: 'asc'}) }}" class="px-4 py-2.5 text-sm font-medium transition-all duration-200 flex items-center gap-2 {% if sortBy == 'prix' and sortOrder == 'asc' %}bg-green-500 text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                                    </svg>
                                    <span>Prix +</span>
                                </a>
                                <a href="{{ path('admin_produit_index', {sortBy: 'prix', sortOrder: 'desc'}) }}" class="px-4 py-2.5 text-sm font-medium transition-all duration-200 flex items-center gap-2 {% if sortBy == 'prix' and sortOrder == 'desc' %}bg-green-500 text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>
                                    </svg>
                                    <span>Prix -</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="flex gap-2">
            <button id="myProductsBtn" type="button" class="px-4 py-2 rounded-lg bg-[#6B7280] text-white font-medium hover:bg-[#4B5563] focus:outline focus:ring-2 focus:ring-[#6B7280]">
                Mes produits
            </button>
            <button id="allProductsBtn" type="button" class="px-4 py-2 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7] hidden">
                Tous les produits
            </button>
            <a href="{{ path('produit_list') }}" class="px-4 py-2 rounded-lg bg-emerald-500 text-white font-medium hover:bg-emerald-600 focus:outline focus:ring-2 focus:ring-emerald-500">
                Afficher les produits
            </a>
            <a href="{{ path('admin_stats_index') }}" class="px-4 py-2 rounded-lg bg-purple-500 text-white font-medium hover:bg-purple-600 focus:outline focus:ring-2 focus:ring-purple-500">
                <svg class="w-4 h-4 inline mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 00-2-2h-2a2 2 0 00-2 2v14a2 2 0 002 2h2a2 2 0 002-2z" />
                </svg>
                Voir Stat
            </a>
            <button id="deleteSelectedBtn" type="button" class="px-4 py-2 rounded-lg bg-red-500 text-white font-medium hover:bg-red-600 focus:outline focus:ring-2 focus:ring-red-500 hidden">
                Supprimer la sélection
            </button>
            <a href="{{ path('admin_produit_new') }}" class="px-4 py-2 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">Nouveau produit</a>
        </div>
    </div>
    <div class="overflow-x-auto">
        <form id="deleteForm" method="POST" action="{{ path('admin_produit_bulk_delete') }}">
            <input type="hidden" name="_token" value="{{ csrf_token('bulk_delete') }}">
            <table class="w-full text-left">
                <thead class="bg-[#F5F1EB] border-b border-[#E5E0D8]">
                    <tr>
                        <th class="px-6 py-4 font-medium text-[#4B5563]"></th>
                        <th class="px-6 py-4 font-medium text-[#4B5563]">Photo</th>
                        <th class="px-6 py-4 font-medium text-[#4B5563]">Produit</th>
                        <th class="px-6 py-4 font-medium text-[#4B5563]">Description</th>
                        <th class="px-6 py-4 font-medium text-[#4B5563]">Catégorie</th>
                        <th class="px-6 py-4 font-medium text-[#4B5563]">Prix</th>
                        <th class="px-6 py-4 font-medium text-[#4B5563]">Disponible</th>
                        <th class="px-6 py-4 font-medium text-[#4B5563]">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-[#E5E0D8]" id="produitTableBody">
                    {% for produit in produits %}
                    <tr class="hover:bg-[#F5F1EB]/50 produit-row" data-nom="{{ produit.nom|lower }}" data-categorie="{{ produit.categorie ? produit.categorie.label|lower : '' }}" data-description="{{ produit.description|lower }}" data-prix="{{ produit.prix }}" data-disponibilite="{{ produit.disponibilite ? 'oui' : 'non' }}" data-user-id="{{ produit.user ? produit.user.id : '' }}">
                        <td class="px-6 py-4">
                            <input type="checkbox" name="ids[]" value="{{ produit.id }}" class="selectItem rounded border-[#E5E0D8]">
                        </td>
                        <td class="px-6 py-4">
                            <a href="{{ path('admin_produit_show', {id: produit.id}) }}" class="inline-block hover:opacity-80">
                                {% if produit.image %}
                                    <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" class="w-16 h-16 object-cover rounded-lg cursor-pointer">
                                {% else %}
                                    <div class="w-16 h-16 bg-[#E5E0D8] rounded-lg flex items-center justify-center text-[#9CA3AF] text-xs">Pas d'image</div>
                                {% endif %}
                            </a>
                        </td>
                        <td class="px-6 py-4 text-[#4B5563]">{{ produit.nom }}</td>
                        <td class="px-6 py-4 text-[#6B7280] max-w-md">{{ produit.description ? produit.description : '—' }}</td>
                        <td class="px-6 py-4 text-[#6B7280]">{{ produit.categorie ? produit.categorie.label : '—' }}</td>
                        <td class="px-6 py-4 text-[#6B7280]">{{ produit.prix|number_format(2, ',', ' ') }} د.ت</td>
                        <td class="px-6 py-4 text-[#6B7280]">{{ produit.disponibilite ? 'Oui' : 'Non' }}</td>
                        <td class="px-6 py-4">
                            <div class="flex gap-2">
                                <a href="{{ path('admin_produit_edit', {id: produit.id}) }}" class="px-3 py-1 rounded bg-[#A7C7E7] text-white text-sm font-medium hover:bg-[#B8D4ED]">
                                    Modifier
                                </a>
                                <a href="{{ path('admin_produit_confirm_delete', {id: produit.id}) }}" class="px-3 py-1 rounded bg-red-500 text-white text-sm font-medium hover:bg-red-600">
                                    Supprimer
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr><td colspan="8" class="px-6 py-8 text-center text-[#6B7280]">Aucun produit.</td></tr>
                    {% endfor %}
                </tbody>
            </table>
        </form>
    </div>
</div>

{% endblock %}
