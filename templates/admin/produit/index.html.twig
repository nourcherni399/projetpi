{% extends 'layouts/admin.html.twig' %}

{% block title %}Gestion des Produits - AutiCare Admin{% endblock %}

{% block admin_content %}
<div class="mb-6">
    <h1 class="text-2xl md:text-3xl font-bold text-[#4B5563]">Gestion des Produits</h1>
    <p class="text-[#6B7280] mt-1">Consultez et gérez le catalogue produits</p>
</div>

{% for message in app.flashes('success') %}
    <div class="mb-4 px-4 py-3 rounded-lg bg-emerald-50 border border-emerald-200 text-emerald-800">{{ message }}</div>
{% endfor %}
{% for message in app.flashes('error') %}
    <div class="mb-4 px-4 py-3 rounded-lg bg-red-50 border border-red-200 text-red-800">{{ message }}</div>
{% endfor %}

<section class="bg-white rounded-xl border border-[#E5E0D8] shadow-sm overflow-hidden" aria-label="Liste des produits">
    <div class="p-4 md:p-6 border-b border-[#E5E0D8] flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <form method="GET" action="{{ path('admin_produit_index') }}" class="flex flex-wrap items-center gap-2 flex-1 max-w-md">
            <input type="search" name="search" placeholder="Rechercher..." value="{{ search|default('') }}" class="px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] flex-1 min-w-[180px]" autocomplete="off">
            <button type="submit" class="px-4 py-2.5 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED]">Rechercher</button>
            {% if search|default('') != '' %}
                <a href="{{ path('admin_produit_index') }}" class="px-4 py-2.5 rounded-lg border border-[#E5E0D8] text-[#6B7280] hover:bg-[#F5F1EB]">Effacer</a>
            {% endif %}
        </form>
        <div class="flex flex-wrap items-center gap-2">
            <a href="{{ path('admin_stats_index') }}" class="px-4 py-2.5 rounded-lg border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB] inline-flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 00-2-2h-2a2 2 0 00-2 2v14a2 2 0 002 2h2a2 2 0 002-2z" /></svg>
                Stats
            </a>
            <a href="{{ path('admin_produit_export_excel') }}" class="px-4 py-2.5 rounded-lg border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB] inline-flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>
                Exporter Excel
            </a>
            <button id="deleteSelectedBtn" type="button" class="px-4 py-2.5 rounded-lg bg-red-500 text-white font-medium hover:bg-red-600 hidden">
                Supprimer la sélection
            </button>
            <a href="{{ path('admin_produit_new') }}" class="px-4 py-2.5 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] inline-flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" /></svg>
                Nouveau produit
            </a>
        </div>
    </div>

    <div class="overflow-x-auto">
        <form id="deleteForm" method="POST" action="{{ path('admin_produit_bulk_delete') }}">
            <input type="hidden" name="_token" value="{{ csrf_token('bulk_delete') }}">
            <table class="w-full text-left">
                <thead class="bg-[#F5F1EB] border-b border-[#E5E0D8]">
                    <tr>
                        <th class="px-6 py-4 font-semibold text-[#4B5563] text-xs uppercase tracking-wider w-10"></th>
                        <th class="px-6 py-4 font-semibold text-[#4B5563] text-xs uppercase tracking-wider">
                            <a href="{{ path('admin_produit_index', {search: search|default(''), sortBy: 'nom', sortOrder: sortBy == 'nom' and sortOrder == 'asc' ? 'desc' : 'asc'}) }}" class="hover:text-[#A7C7E7]">Produit</a>
                        </th>
                        <th class="px-6 py-4 font-semibold text-[#4B5563] text-xs uppercase tracking-wider">Catégorie</th>
                        <th class="px-6 py-4 font-semibold text-[#4B5563] text-xs uppercase tracking-wider">
                            <a href="{{ path('admin_produit_index', {search: search|default(''), sortBy: 'prix', sortOrder: sortBy == 'prix' and sortOrder == 'asc' ? 'desc' : 'asc'}) }}" class="hover:text-[#A7C7E7]">Prix</a>
                        </th>
                        <th class="px-6 py-4 font-semibold text-[#4B5563] text-xs uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-4 font-semibold text-[#4B5563] text-xs uppercase tracking-wider text-right">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-[#E5E0D8] bg-white" id="produitTableBody">
                    {% for produit in produits %}
                    <tr class="hover:bg-[#F9FAFB] produit-row" data-nom="{{ produit.nom|lower }}" data-categorie="{{ produit.categorie ? produit.categorie.label|lower : '' }}" data-description="{{ produit.description|lower }}" data-prix="{{ produit.prix }}" data-disponibilite="{{ produit.disponibilite ? 'oui' : 'non' }}" data-user-id="{{ produit.user ? produit.user.id : '' }}">
                        <td class="px-6 py-4">
                            {% set cannotDelete = produit.id in produitIdsAvecCommandes|default([]) %}
                            <input type="checkbox" name="ids[]" value="{{ produit.id }}" class="selectItem rounded border-[#E5E0D8] text-[#A7C7E7] focus:ring-[#A7C7E7]" {% if cannotDelete %}disabled title="Ce produit ne peut pas être supprimé (présent dans des commandes)"{% endif %}>
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <a href="{{ path('admin_produit_show', {id: produit.id}) }}" class="shrink-0 hover:opacity-90">
                                    {% if produit.image %}
                                        <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" class="w-12 h-12 object-cover rounded-lg">
                                    {% else %}
                                        <div class="w-12 h-12 bg-[#E5E0D8] rounded-lg flex items-center justify-center text-[#9CA3AF] text-xs">—</div>
                                    {% endif %}
                                </a>
                                <div>
                                    <a href="{{ path('admin_produit_show', {id: produit.id}) }}" class="font-medium text-[#4B5563] hover:text-[#A7C7E7]">{{ produit.nom }}</a>
                                    {% if produit.description %}
                                        <p class="text-[#6B7280] text-sm mt-0.5 line-clamp-1 max-w-xs">{{ produit.description }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 text-[#6B7280]">{{ produit.categorie ? produit.categorie.label() : '—' }}</td>
                        <td class="px-6 py-4 font-medium text-[#4B5563]">{{ produit.prix|number_format(2, ',', ' ') }} د.ت</td>
                        <td class="px-6 py-4">
                            {% if produit.disponibilite %}
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-emerald-50 text-emerald-700 border border-emerald-200">Disponible</span>
                            {% else %}
                                <span class="inline-flex items-center px-2.5 py-1 rounded-full text-xs font-medium bg-amber-50 text-amber-700 border border-amber-200">Indisponible</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-right">
                            <div class="flex items-center justify-end gap-2">
                                <a href="{{ path('admin_produit_show', {id: produit.id}) }}" class="inline-flex items-center justify-center w-9 h-9 rounded-lg border border-[#E5E0D8] text-[#6B7280] hover:bg-[#F5F1EB]" title="Voir">Voir</a>
                                <a href="{{ path('admin_produit_edit', {id: produit.id}) }}" class="inline-flex items-center justify-center w-9 h-9 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100" title="Modifier">
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" /></svg>
                                </a>
                                <a href="{{ path('admin_produit_confirm_delete', {id: produit.id}) }}" class="inline-flex items-center justify-center w-9 h-9 rounded-lg bg-red-50 text-red-600 hover:bg-red-100" title="Supprimer">
                                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" /></svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-12 text-center text-[#6B7280]">Aucun produit.</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </form>
    </div>
</section>

{% if stats is defined and stats %}
<section class="mt-8 pt-8 border-t border-[#E5E0D8]" aria-label="Statistiques des produits">
    <h2 class="text-xl font-semibold text-[#4B5563] mb-4">Résumé</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div class="rounded-xl bg-white border border-[#E5E0D8] p-4 text-center">
            <div class="text-2xl font-bold text-[#4B5563]">{{ stats.total }}</div>
            <div class="text-sm text-[#6B7280]">Total des produits</div>
        </div>
        <div class="rounded-xl bg-white border border-emerald-200 p-4 text-center">
            <div class="text-2xl font-bold text-emerald-700">{{ stats.disponibles }}</div>
            <div class="text-sm text-[#6B7280]">Disponibles</div>
        </div>
        <div class="rounded-xl bg-white border border-amber-200 p-4 text-center">
            <div class="text-2xl font-bold text-amber-700">{{ stats.indisponibles }}</div>
            <div class="text-sm text-[#6B7280]">Indisponibles</div>
        </div>
    </div>
    {% if stats.parCategorie|length > 0 %}
    <div class="mt-4 flex flex-wrap gap-2">
        {% for item in stats.parCategorie %}
        <span class="inline-flex items-center gap-1 px-3 py-1.5 rounded-lg bg-[#F5F1EB] border border-[#E5E0D8] text-sm text-[#4B5563]">{{ item.categorie }} ({{ item.nombre }})</span>
        {% endfor %}
    </div>
    {% endif %}
</section>
{% endif %}

<script>
document.addEventListener('DOMContentLoaded', function() {
    var searchInput = document.querySelector('input[name="search"]');
    var indexUrl = {{ path('admin_produit_index')|json_encode|raw }};
    if (searchInput) {
        searchInput.addEventListener('search', function() {
            if (this.value.trim() === '') window.location.href = indexUrl;
        });
    }
    var deleteBtn = document.getElementById('deleteSelectedBtn');
    var checkboxes = document.querySelectorAll('.selectItem:not([disabled])');
    var deleteForm = document.getElementById('deleteForm');
    if (deleteBtn && checkboxes.length) {
        function toggleDeleteBtn() {
            var checked = document.querySelectorAll('.selectItem:not([disabled]):checked');
            deleteBtn.classList.toggle('hidden', checked.length === 0);
        }
        checkboxes.forEach(function(cb) { cb.addEventListener('change', toggleDeleteBtn); });
        deleteBtn.addEventListener('click', function() {
            if (confirm('Supprimer les produits sélectionnés ?')) deleteForm.submit();
        });
    }
});
</script>
{% endblock %}
