{% extends 'layouts/admin.html.twig' %}

{% block title %}Modifier {{ user.nom }} {{ user.prenom }} - AutiCare Admin{% endblock %}

{% block admin_content %}
<div class="max-w-2xl">
    <div class="mb-6 flex items-center gap-4">
        <a href="{{ path('admin_user_show', { id: user.id }) }}" class="inline-flex items-center gap-2 text-[#6B7280] hover:text-[#A7C7E7] focus:outline focus:ring-2 focus:ring-[#A7C7E7] rounded-lg">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            Retour à la fiche
        </a>
    </div>
    <h1 class="text-2xl font-semibold text-[#4B5563] mb-6">Modifier l'utilisateur</h1>

    {% for message in app.flashes('error') %}
        <div class="mb-4 px-4 py-3 rounded-lg bg-red-50 border border-red-200 text-red-800">{{ message }}</div>
    {% endfor %}
    {% if form.vars.errors|length > 0 %}
        <div class="mb-4 px-4 py-3 rounded-lg bg-red-50 border border-red-200 text-red-800">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="bg-white rounded-xl border border-[#E5E0D8] p-6 md:p-8">
        {{ form_start(form, {
            method: 'POST',
            action: path('admin_user_edit', { id: user.id }),
            attr: { class: 'space-y-6', novalidate: 'novalidate' },
            label_attr: { class: 'block text-[#4B5563] font-medium mb-1' }
        }) }}
        <div class="grid grid-cols-1 gap-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {{ form_row(form.nom) }}
                {{ form_row(form.prenom) }}
            </div>
            {{ form_row(form.email) }}
            {{ form_row(form.telephone) }}
            <div>
                {{ form_label(form.image, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-1'}}) }}
                {% if user.image %}
                    <p class="text-sm text-[#6B7280] mb-2">Photo actuelle :</p>
                    <img src="{{ asset(user.image) }}" alt="Photo actuelle" class="w-20 h-20 rounded-xl object-cover border border-[#E5E0D8] mb-3">
                {% endif %}
                {{ form_widget(form.image) }}
                {{ form_errors(form.image) }}
            </div>
            {{ form_row(form.plainPassword.first) }}
            {{ form_row(form.plainPassword.second) }}
            <div class="flex items-center gap-2">
                {{ form_widget(form.isActive) }}
                {{ form_label(form.isActive) }}
                {{ form_errors(form.isActive) }}
            </div>
            {{ form_row(form.role) }}

            <div id="role-fields-medcin" class="role-fields hidden pt-4 border-t border-[#E5E0D8]" data-role="ROLE_MEDECIN">
                <h2 class="text-lg font-semibold text-[#4B5563] mb-4">Attributs Médecin</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {{ form_row(form.specialite) }}
                    {{ form_row(form.nomCabinet) }}
                </div>
                {{ form_row(form.adresseCabinet) }}
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {{ form_row(form.telephoneCabinet) }}
                    {{ form_row(form.tarifConsultation) }}
                </div>
            </div>
            <div id="role-fields-parent" class="role-fields hidden pt-4 border-t border-[#E5E0D8]" data-role="ROLE_PARENT">
                <h2 class="text-lg font-semibold text-[#4B5563] mb-4">Attributs Parent</h2>
                {{ form_row(form.relationAvecPatient) }}
            </div>
            <div id="role-fields-patient" class="role-fields hidden pt-4 border-t border-[#E5E0D8]" data-role="ROLE_PATIENT">
                <h2 class="text-lg font-semibold text-[#4B5563] mb-4">Attributs Patient</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    {{ form_row(form.dateNaissance) }}
                    {{ form_row(form.sexe) }}
                </div>
                {{ form_row(form.adresse) }}
            </div>
        </div>
        <div class="flex flex-wrap gap-3 pt-4">
            <button type="submit" class="px-5 py-2.5 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
                Enregistrer
            </button>
            <a href="{{ path('admin_user_show', { id: user.id }) }}" class="px-5 py-2.5 rounded-lg border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB]">
                Annuler
            </a>
        </div>
        {{ form_end(form) }}
    </div>
</div>

<script>
(function() {
    var roleSelect = document.querySelector('[name*="[role]"]');
    var blocks = document.querySelectorAll('.role-fields');
    function updateVisibility() {
        var value = roleSelect ? roleSelect.value : '';
        blocks.forEach(function(block) {
            var role = block.getAttribute('data-role');
            var show = (role === value) || (value === 'ROLE_USER' && role === 'ROLE_PATIENT');
            block.classList.toggle('hidden', !show);
        });
    }
    if (roleSelect) {
        roleSelect.addEventListener('change', updateVisibility);
        updateVisibility();
    }
})();
</script>
{% endblock %}
