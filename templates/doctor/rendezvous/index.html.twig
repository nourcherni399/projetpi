{% extends 'layouts/doctor.html.twig' %}

{% block title %}Rendez-vous - AutiCare Médecin{% endblock %}

{% block doctor_content %}

<div class="space-y-6">
    <!-- En-tête moderne -->
    <div class="bg-gradient-to-r from-[#A7C7E7] via-[#B8D4ED] to-[#C5D9F2] rounded-2xl p-8 text-white shadow-xl hover:shadow-2xl transition-all duration-300">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-4xl font-bold mb-3 flex items-center gap-3">
                    <svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    Mes rendez-vous
                </h1>
                <p class="text-blue-100 text-lg">Gérez vos consultations et suivez vos patients</p>
            </div>
            <div class="text-center bg-white/20 backdrop-blur-sm rounded-xl p-6">
                <div class="text-5xl font-bold">{{ rendez_vous_list|length }}</div>
                <div class="text-sm text-blue-100 mt-2">Total rendez-vous</div>
            </div>
        </div>
    </div>

    <!-- Messages flash -->
    {% for message in app.flashes('success') %}
    <div class="mb-6 p-4 bg-gradient-to-r from-green-50 to-emerald-100 border border-green-200 rounded-xl shadow-lg">
        <div class="flex items-center gap-3">
            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span class="text-green-800 font-medium">{{ message }}</span>
        </div>
    </div>
    {% endfor %}

    <!-- Filtres et actions -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 p-6">
        <div class="flex flex-wrap gap-4 items-center justify-between">
            <div class="flex items-center gap-3 flex-1">
                <svg class="w-5 h-5 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
                <input type="search" placeholder="Rechercher un patient, une date..." class="flex-1 px-4 py-3 rounded-xl border border-gray-300 bg-gray-50 text-gray-700 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-[#A7C7E7] transition-all">
            </div>
            <div class="flex items-center gap-3">
                <select class="px-4 py-3 rounded-xl border border-gray-300 bg-gray-50 text-gray-700 focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-[#A7C7E7] transition-all">
                    <option value="">Tous les statuts</option>
                    <option value="confirmer">Confirmés</option>
                    <option value="en_attente">En attente</option>
                    <option value="annuler">Annulés</option>
                </select>
                <select class="px-4 py-3 rounded-xl border border-gray-300 bg-gray-50 text-gray-700 focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-[#A7C7E7] transition-all">
                    <option value="">Tous les motifs</option>
                    <option value="normal">Normal</option>
                    <option value="urgence">Urgence</option>
                    <option value="suivie">Suivi</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Tableau moderne -->
    <div class="bg-white rounded-2xl shadow-lg border border-gray-200 overflow-hidden">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-6 py-4 border-b border-gray-200">
            <h2 class="text-xl font-bold text-gray-800 flex items-center gap-3">
                <svg class="w-6 h-6 text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                Liste de vos rendez-vous
            </h2>
        </div>
        
        <div class="overflow-x-auto">
            {% if rendez_vous_list is empty %}
            <div class="text-center py-16">
                <svg class="w-20 h-20 mx-auto text-gray-400 mb-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <h3 class="text-2xl font-semibold text-gray-600 mb-3">Aucun rendez-vous</h3>
                <p class="text-gray-500 text-lg">Vous n'avez pas encore de rendez-vous programmés.</p>
            </div>
            {% else %}
            <table class="w-full">
                <thead class="bg-gradient-to-r from-gray-50 to-gray-100 border-b border-gray-200">
                    <tr>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Patient</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Motif</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Contact</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    {% for rdv in rendez_vous_list %}
                    <tr class="hover:bg-gradient-to-r hover:from-blue-50 hover:to-indigo-50 transition-all duration-200">
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-3">
                                <div class="w-10 h-10 rounded-full bg-gradient-to-br from-[#4B5563] to-[#6B7280] flex items-center justify-center text-white font-bold shadow-lg">
                                    {{ rdv.nom|first|upper }}{{ rdv.prenom|first|upper }}
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900 text-lg">{{ rdv.prenom }} {{ rdv.nom }}</div>
                                    {% if rdv.email %}
                                    <div class="text-sm text-gray-600 flex items-center gap-2">
                                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                        </svg>
                                        {{ rdv.email }}
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            {% if rdv.dateRdv %}
                            <div class="flex items-center gap-2">
                                <svg class="w-4 h-4 text-gray-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                <span class="font-medium text-gray-900">{{ rdv.dateRdv|date('d/m/Y à H:i') }}</span>
                            </div>
                            {% else %}
                            <span class="text-gray-400">—</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            {% if rdv.status %}
                            {% set statusClass = {
                                'confirmer': 'bg-gradient-to-r from-green-100 to-emerald-100 text-green-800 border-green-300',
                                'en_attente': 'bg-gradient-to-r from-amber-100 to-orange-100 text-amber-800 border-amber-300',
                                'annuler': 'bg-gradient-to-r from-red-100 to-pink-100 text-red-800 border-red-300'
                            } %}
                            {% set statusIcon = {
                                'confirmer': '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>',
                                'en_attente': '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 00-1 1v8a1 1 0 001 1h3a1 1 0 001-1V6a1 1 0 00-1-1H6a1 1 0 00-1 1v8a1 1 0 001 1h3a1 1 0 001-1V6a1 1 0 00-1-1H6a1 1 0 00-1 1v8a1 1 0 001 1z" clip-rule="evenodd" /></svg>',
                                'annuler': '<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>'
                            } %}
                            {% set statusText = {
                                'confirmer': 'Confirmé',
                                'en_attente': 'En attente',
                                'annuler': 'Annulé'
                            } %}
                            
                            <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full text-sm font-semibold border {{ statusClass[rdv.status.value] ?? 'bg-gray-100 text-gray-800' }}">
                                {{ statusIcon[rdv.status.value] ?? ''|raw }}
                                {{ statusText[rdv.status.value] ?? rdv.status.value|title }}
                            </span>
                            {% else %}
                            <span class="text-gray-400">—</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            {% if rdv.motif %}
                            <span class="inline-flex items-center gap-2 px-3 py-2 bg-gray-100 text-gray-700 rounded-lg text-sm">
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2a2 2 0 002-2v4a2 2 0 002 2h2a2 2 0 002-2v-4a2 2 0 002-2H7a2 2 0 01-2-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2z" />
                                </svg>
                                {{ rdv.motif.value|title }}
                            </span>
                            {% else %}
                            <span class="text-gray-400">—</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center gap-2">
                                {% if rdv.telephone %}
                                <a href="tel:{{ rdv.telephone }}" class="inline-flex items-center gap-2 px-3 py-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2v3a2 2 0 002 2h6a2 2 0 002 2v-3a2 2 0 00-2-2H5a2 2 0 00-2 2v3a2 2 0 002 2z" />
                                    </svg>
                                    {{ rdv.telephone }}
                                </a>
                                {% endif %}
                                {% if rdv.email %}
                                <a href="mailto:{{ rdv.email }}" class="inline-flex items-center gap-2 px-3 py-2 bg-green-100 text-green-700 rounded-lg hover:bg-green-200 transition-colors">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    Email
                                </a>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            {% endif %}
        </div>
{% endblock %}
