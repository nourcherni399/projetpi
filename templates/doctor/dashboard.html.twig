{% extends 'layouts/doctor.html.twig' %}

{% block title %}Tableau de bord - AutiCare Médecin{% endblock %}

{% block doctor_content %}
<style>
@keyframes slideInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
}
@keyframes fadeInScale {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
}
@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
}
.animate-slideUp {
    animation: slideInUp 0.6s ease-out;
}
.animate-fadeScale {
    animation: fadeInScale 0.5s ease-out;
}
.animate-pulse-once {
    animation: pulse 0.3s ease-in-out;
}

/* Responsive Design */
@media (max-width: 768px) {
    .stats-grid {
        grid-template-columns: 1fr !important;
    }
}
@media (max-width: 480px) {
    .stats-grid {
        grid-template-columns: 1fr !important;
    }
}
</style>

<div class="animate-slideUp">
    <div class="relative overflow-hidden rounded-3xl bg-gradient-to-r from-[#A7C7E7] via-[#B8D4ED] to-[#C9E1F3] p-8 shadow-xl mb-8">
        <div class="absolute inset-0 bg-black opacity-5"></div>
        <div class="relative z-10">
            <h1 class="text-4xl font-bold text-white mb-3 drop-shadow-lg">Tableau de bord médecin</h1>
            <p class="text-white/90 text-lg max-w-2xl">Gérez vos disponibilités et consultez vos statistiques</p>
        </div>
    </div>

    <!-- Section Actions rapides -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <section class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 animate-fadeScale" style="animation-delay: 0.1s">
            <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-[#A7C7E7] to-[#B8D4ED] text-white flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <h2 class="text-lg font-bold text-[#4B5563]">Rendez-vous à venir</h2>
            </div>
            <p class="text-[#6B7280] mb-4">Vue d'ensemble des prochains rendez-vous (à connecter).</p>
            <a href="{{ path('doctor_availability') }}" class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-gradient-to-r from-[#A7C7E7] to-[#B8D4ED] text-white font-medium hover:from-[#B8D4ED] hover:to-[#C9E1F3] shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                Gérer les disponibilités
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
            </a>
        </section>
        
        <section class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 animate-fadeScale" style="animation-delay: 0.2s">
            <div class="flex items-center gap-3 mb-4">
                <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-[#A7C7E7] to-[#B8D4ED] text-white flex items-center justify-center shadow-lg">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                </div>
                <h2 class="text-lg font-bold text-[#4B5563]">Mes disponibilités</h2>
            </div>
            <p class="text-[#6B7280] mb-4">Définir et visualiser vos créneaux de disponibilité.</p>
            <a href="{{ path('doctor_availability') }}" class="inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-gradient-to-r from-[#A7C7E7] to-[#B8D4ED] text-white font-medium hover:from-[#B8D4ED] hover:to-[#C9E1F3] shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                Voir / modifier
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
            </a>
        </section>
    </div>

    <!-- Section Statistiques Avancées -->
    <div class="mb-8">
        <h2 class="text-2xl font-bold text-[#4B5563] mb-6 flex items-center gap-2">
            <svg class="w-6 h-6 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
            Statistiques des rendez-vous
        </h2>
        
        <!-- Cartes principales avec tendances -->
        <div class="stats-grid grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Total des rendez-vous avec tendance -->
            <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 animate-fadeScale" style="animation-delay: 0.3s">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 text-white flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div class="text-right">
                        <span class="text-2xl font-bold text-[#4B5563]">{{ stats.total_rdv|default(0) }}</span>
                        <div class="flex items-center gap-1 mt-1">
                            {% if stats.monthly_trend is defined and stats.monthly_trend > 0 %}
                                <svg class="w-4 h-4 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                                <span class="text-xs text-green-500 font-medium">+{{ stats.monthly_trend|default(0) }}%</span>
                            {% else %}
                                <svg class="w-4 h-4 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M13 17h8m0 0V9m0 8l-8-8-4 4-6-6" />
                                </svg>
                                <span class="text-xs text-red-500 font-medium">{{ stats.monthly_trend|default(0) }}%</span>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <h3 class="text-sm font-medium text-[#6B7280] mb-1">Total rendez-vous</h3>
                <p class="text-xs text-[#9CA3AF]">Ce mois-ci • vs mois dernier</p>
            </div>

            <!-- Rendez-vous du jour -->
            <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 animate-fadeScale" style="animation-delay: 0.4s">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-green-500 to-green-600 text-white flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <span class="text-2xl font-bold text-[#4B5563]">{{ stats.today_rdv|default(0) }}</span>
                </div>
                <h3 class="text-sm font-medium text-[#6B7280] mb-1">Aujourd'hui</h3>
                <p class="text-xs text-[#9CA3AF]">Rendez-vous prévus</p>
            </div>

            <!-- Patients actifs -->
            <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 animate-fadeScale" style="animation-delay: 0.5s">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-purple-500 to-purple-600 text-white flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2a3 3 0 00-5.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2a3 3 0 00-5.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <span class="text-2xl font-bold text-[#4B5563]">{{ stats.active_patients|default(0) }}</span>
                </div>
                <h3 class="text-sm font-medium text-[#6B7280] mb-1">Patients actifs</h3>
                <p class="text-xs text-[#9CA3AF]">En suivi</p>
            </div>

            <!-- Taux de completion -->
            <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 animate-fadeScale" style="animation-delay: 0.6s">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-orange-500 to-orange-600 text-white flex items-center justify-center shadow-lg">
                        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z" />
                        </svg>
                    </div>
                    <span class="text-2xl font-bold text-[#4B5563]">{{ stats.completion_rate|default(0) }}%</span>
                </div>
                <h3 class="text-sm font-medium text-[#6B7280] mb-1">Taux de completion</h3>
                <p class="text-xs text-[#9CA3AF]">{{ stats.total_all_rdv is defined ? stats.total_all_rdv : 0 }} total, {{ stats.confirmed_rdv is defined ? stats.confirmed_rdv : 0 }} confirmés</p>
            </div>
        </div>

        <!-- Graphique semaine et statistiques détaillées -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <!-- Graphique de la semaine -->
            <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 animate-fadeScale" style="animation-delay: 0.7s">
                <h3 class="text-lg font-bold text-[#4B5563] mb-4 flex items-center gap-2">
                    <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                    Activité cette semaine
                </h3>
                <div class="space-y-3">
                    {% for dayStat in stats.week_stats|default([]) %}
                        <div class="flex items-center gap-3">
                            <span class="text-sm font-medium text-[#6B7280] w-8">{{ dayStat.day }}</span>
                            <div class="flex-1 bg-gray-200 rounded-full h-6 relative overflow-hidden">
                                <div class="bg-gradient-to-r from-[#A7C7E7] to-[#B8D4ED] h-full rounded-full transition-all duration-500 flex items-center justify-end pr-2" style="width: {{ dayStat.percentage }}%">
                                    {% if dayStat.count > 0 %}
                                        <span class="text-xs text-white font-medium">{{ dayStat.count }}</span>
                                    {% endif %}
                                </div>
                            </div>
                            <span class="text-xs text-[#9CA3AF] w-12 text-right">{{ dayStat.percentage }}%</span>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Top patients -->
            <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 animate-fadeScale" style="animation-delay: 0.8s">
                <h3 class="text-lg font-bold text-[#4B5563] mb-4 flex items-center gap-2">
                    <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2a3 3 0 00-5.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2a3 3 0 00-5.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    Top 5 Patients
                </h3>
                <div class="space-y-3">
                    {% for patientData in stats.top_patients|default([]) %}
                        <div class="flex items-center justify-between p-3 rounded-lg bg-[#F5F1EB]/50 hover:bg-[#F5F1EB]/70 transition-colors">
                            <div class="flex items-center gap-3">
                                <div class="w-8 h-8 rounded-full bg-gradient-to-br from-[#A7C7E7] to-[#B8D4ED] text-white flex items-center justify-center text-sm font-bold">
                                    {{ loop.index }}
                                </div>
                                <div>
                                    <p class="text-sm font-medium text-[#4B5563]">
                                        {{ patientData.patient.prenom|default('') }} {{ patientData.patient.nom|default('') }}
                                    </p>
                                    <p class="text-xs text-[#6B7280]">{{ patientData.patient.email|default('') }}</p>
                                </div>
                            </div>
                            <div class="text-right">
                                <span class="text-lg font-bold text-[#A7C7E7]">{{ patientData.count }}</span>
                                <p class="text-xs text-[#6B7280]">rendez-vous</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        <!-- Statistiques supplémentaires -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
            <!-- Rendez-vous en attente -->
            <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 animate-fadeScale" style="animation-delay: 0.9s">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-yellow-500 to-yellow-600 text-white flex items-center justify-center shadow-lg">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <span class="text-xl font-bold text-[#4B5563]">{{ stats.pending_rdv|default(0) }}</span>
                </div>
                <h3 class="text-sm font-medium text-[#6B7280] mb-1">En attente</h3>
                <p class="text-xs text-[#9CA3AF]">À valider</p>
            </div>

            <!-- Rendez-vous annulés -->
            <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 animate-fadeScale" style="animation-delay: 1.0s">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-red-500 to-red-600 text-white flex items-center justify-center shadow-lg">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </div>
                    <span class="text-xl font-bold text-[#4B5563]">{{ stats.cancelled_rdv|default(0) }}</span>
                </div>
                <h3 class="text-sm font-medium text-[#6B7280] mb-1">Annulés</h3>
                <p class="text-xs text-[#9CA3AF]">Non honorés</p>
            </div>

            <!-- Rendez-vous de la semaine -->
            <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 animate-fadeScale" style="animation-delay: 1.1s">
                <div class="flex items-center justify-between mb-4">
                    <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 text-white flex items-center justify-center shadow-lg">
                        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <span class="text-xl font-bold text-[#4B5563]">{{ stats.week_rdv|default(0) }}</span>
                </div>
                <h3 class="text-sm font-medium text-[#6B7280] mb-1">Cette semaine</h3>
                <p class="text-xs text-[#9CA3AF]">Programmés</p>
            </div>
        </div>

        <!-- Heures les plus populaires -->
        {% if stats.hour_stats is defined and stats.hour_stats|length > 0 %}
        <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 hover:shadow-2xl transition-all duration-300 animate-fadeScale" style="animation-delay: 1.2s">
            <h3 class="text-lg font-bold text-[#4B5563] mb-4 flex items-center gap-2">
                <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                Heures les plus populaires
            </h3>
            <div class="flex flex-wrap gap-3">
                {% for hour, count in stats.hour_stats %}
                    <div class="px-4 py-2 rounded-xl bg-gradient-to-r from-[#A7C7E7]/20 to-[#B8D4ED]/30 text-[#4B5563] font-medium hover:from-[#A7C7E7]/30 hover:to-[#B8D4ED]/40 transition-all duration-300">
                        <span class="text-sm">{{ hour }}h</span>
                        <span class="ml-2 text-xs bg-white/50 px-2 py-1 rounded-full">{{ count }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
