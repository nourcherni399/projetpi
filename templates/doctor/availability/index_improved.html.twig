{% extends 'layouts/doctor.html.twig' %}

{% block title %}Disponibilités - AutiCare Médecin{% endblock %}

{% block doctor_content %}
<div class="space-y-6">
    <!-- En-tête avec statistiques -->
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-[#4B5563]">Gestion des disponibilités</h1>
            <p class="text-[#6B7280] mt-1">Configurez vos créneaux horaires et optimisez votre planning</p>
        </div>
        <button type="button" id="btn-nouvelle-dispo" class="px-6 py-3 rounded-xl bg-gradient-to-r from-[#A7C7E7] to-[#B8D4ED] text-white font-medium hover:shadow-lg transition-all transform hover:scale-105 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            Nouvelle disponibilité
        </button>
    </div>

    <!-- Messages flash -->
    {% for message in app.flashes('success') %}
        <div class="mb-4 px-4 py-3 rounded-lg bg-emerald-50 border border-emerald-200 text-emerald-800 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="mb-4 px-4 py-3 rounded-lg bg-red-50 border border-red-200 text-red-800 flex items-center gap-2">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" />
            </svg>
            {{ message }}
        </div>
    {% endfor %}

    <!-- Cartes de statistiques -->
    {% if stats is defined %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Carte Total disponibilités -->
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl border border-blue-200 p-6 hover:shadow-lg transition-all">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-blue-600 text-sm font-medium">Total créneaux</p>
                    <p class="text-3xl font-bold text-blue-900 mt-2">{{ stats.total_disponibilites }}</p>
                    <p class="text-blue-600 text-xs mt-1">{{ stats.disponibilites_actives }} actifs</p>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-200">
                    <svg class="w-6 h-6 text-blue-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Carte Heures par semaine -->
        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl border border-green-200 p-6 hover:shadow-lg transition-all">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-green-600 text-sm font-medium">Heures/semaine</p>
                    <p class="text-3xl font-bold text-green-900 mt-2">{{ stats.heures_par_semaine }}</p>
                    <p class="text-green-600 text-xs mt-1">Temps disponible</p>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-full bg-green-200">
                    <svg class="w-6 h-6 text-green-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Carte Taux d'occupation -->
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl border border-purple-200 p-6 hover:shadow-lg transition-all">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-purple-600 text-sm font-medium">Taux occupation</p>
                    <p class="text-3xl font-bold text-purple-900 mt-2">{{ stats.taux_occupation }}%</p>
                    <p class="text-purple-600 text-xs mt-1">{{ stats.rendez_vous_cette_semaine }} RDV cette semaine</p>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-full bg-purple-200">
                    <svg class="w-6 h-6 text-purple-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                    </svg>
                </div>
            </div>
        </div>

        <!-- Carte Efficacité -->
        <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-xl border border-orange-200 p-6 hover:shadow-lg transition-all">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-orange-600 text-sm font-medium">Efficacité</p>
                    <p class="text-3xl font-bold text-orange-900 mt-2">{{ stats.efficacite }}%</p>
                    <p class="text-orange-600 text-xs mt-1">Créneaux actifs</p>
                </div>
                <div class="flex items-center justify-center w-12 h-12 rounded-full bg-orange-200">
                    <svg class="w-6 h-6 text-orange-700" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 13.5l10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75z" />
                    </svg>
                </div>
            </div>
        </div>
    </div>

    <!-- Graphique des jours les plus actifs -->
    {% if stats.jours_disponibles is defined and stats.jours_disponibles|length > 0 %}
    <div class="bg-white rounded-xl border border-[#E5E0D8] overflow-hidden">
        <div class="p-6 border-b border-[#E5E0D8] bg-gradient-to-r from-[#A7C7E7]/10 to-transparent">
            <h2 class="text-xl font-semibold text-[#4B5563]">Répartition par jour</h2>
            <p class="text-[#6B7280] text-sm mt-1">{{ stats.jour_plus_actif|capitalize }} est votre jour le plus actif</p>
        </div>
        <div class="p-6">
            <div class="grid grid-cols-7 gap-4">
                {% set jours_order = ['lundi', 'mardi', 'mercredi', 'jeudi', 'vendredi', 'samedi', 'dimanche'] %}
                {% for jour in jours_order %}
                    {% set count = stats.jours_disponibles[jour] ?? 0 %}
                    {% set max_count = stats.jours_disponibles|length > 0 ? (stats.jours_disponibles|max) : 1 %}
                    {% set percentage = max_count > 0 ? (count / max_count) * 100 : 0 %}
                    
                    <div class="text-center">
                        <div class="text-xs text-[#6B7280] mb-2">{{ jour|capitalize }}</div>
                        <div class="relative h-24 bg-[#F5F1EB] rounded-lg overflow-hidden">
                            <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-[#A7C7E7] to-[#B8D4ED] transition-all duration-500" 
                                 style="height: {{ percentage }}%">
                            </div>
                        </div>
                        <div class="text-sm font-medium text-[#4B5563] mt-2">{{ count }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    {% endif %}
    {% endif %}

    <!-- Formulaire nouvelle disponibilité -->
    <div id="form-nouvelle-dispo" class="bg-white rounded-xl border border-[#E5E0D8] overflow-hidden shadow-lg {% if not form.vars.submitted or form.vars.valid %}hidden{% endif %}" aria-hidden="{{ (form.vars.submitted and not form.vars.valid) ? 'false' : 'true' }}">
        <div class="p-6 border-b border-[#E5E0D8] bg-gradient-to-r from-[#A7C7E7]/10 to-transparent">
            <h2 class="text-xl font-semibold text-[#4B5563] flex items-center gap-2">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
                </svg>
                Nouvelle disponibilité
            </h2>
            <p class="text-sm text-[#6B7280] mt-1">Configurez un nouveau créneau horaire pour vos rendez-vous</p>
        </div>
        <div class="p-6">
            {{ form_start(form, { attr: { class: 'space-y-6' }, label_attr: { class: 'block text-[#4B5563] font-medium mb-2' } }) }}
            {{ form_errors(form) }}
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    {{ form_label(form.jour) }}
                    {{ form_widget(form.jour, { attr: { class: 'w-full px-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent' } }) }}
                    {{ form_errors(form.jour) }}
                </div>
                
                <div class="space-y-2">
                    {{ form_label(form.heureDebut) }}
                    {{ form_widget(form.heureDebut, { attr: { class: 'w-full px-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent' } }) }}
                    {{ form_errors(form.heureDebut) }}
                </div>
                
                <div class="space-y-2">
                    {{ form_label(form.heureFin) }}
                    {{ form_widget(form.heureFin, { attr: { class: 'w-full px-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent' } }) }}
                    {{ form_errors(form.heureFin) }}
                </div>
                
                <div class="space-y-2">
                    {{ form_label(form.duree) }}
                    {{ form_widget(form.duree, { attr: { class: 'w-full px-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent' } }) }}
                    {{ form_errors(form.duree) }}
                </div>
            </div>
            
            <div class="flex items-center gap-3 p-4 bg-[#F5F1EB]/50 rounded-lg">
                {{ form_widget(form.estDispo, { attr: { class: 'w-4 h-4 text-[#A7C7E7] border-[#E5E0D8] rounded focus:ring-[#A7C7E7]' } }) }}
                {{ form_label(form.estDispo, { attr: { class: 'text-[#4B5563] font-medium' } }) }}
                {{ form_errors(form.estDispo) }}
            </div>
            
            <div class="flex gap-4">
                <button type="submit" class="px-6 py-3 rounded-xl bg-gradient-to-r from-[#A7C7E7] to-[#B8D4ED] text-white font-medium hover:shadow-lg transition-all transform hover:scale-105 flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                    Enregistrer la disponibilité
                </button>
                <button type="button" id="btn-cancel-dispo" class="px-6 py-3 rounded-xl border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB] transition-all">
                    Annuler
                </button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>

    <!-- Liste des disponibilités -->
    <div class="bg-white rounded-xl border border-[#E5E0D8] overflow-hidden shadow-lg">
        <div class="p-6 border-b border-[#E5E0D8] bg-gradient-to-r from-[#A7C7E7]/10 to-transparent">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
                <div>
                    <h2 class="text-xl font-semibold text-[#4B5563]">Vos disponibilités</h2>
                    <p class="text-[#6B7280] text-sm mt-1">{{ disponibilites|length }} créneau(s) configuré(s)</p>
                </div>
                <div class="flex items-center gap-3">
                    <form method="get" action="{{ path('doctor_availability') }}" class="flex items-center gap-2">
                        <div class="relative">
                            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-[#6B7280]">
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                                </svg>
                            </span>
                            <input type="search" name="q" value="{{ search|default('') }}" placeholder="Rechercher..." class="pl-10 pr-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent w-64">
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="overflow-x-auto">
            {% if disponibilites|length > 0 %}
                <table class="w-full">
                    <thead class="bg-[#F5F1EB] border-b border-[#E5E0D8]">
                        <tr>
                            <th class="px-6 py-4 text-left text-sm font-medium text-[#4B5563]">Jour</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-[#4B5563]">Horaire</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-[#4B5563]">Durée</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-[#4B5563]">Statut</th>
                            <th class="px-6 py-4 text-left text-sm font-medium text-[#4B5563]">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-[#E5E0D8]">
                        {% for dispo in disponibilites %}
                        <tr class="hover:bg-[#F5F1EB]/30 transition-colors">
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <div class="w-2 h-2 rounded-full {% if dispo.estDispo %}bg-green-500{% else %}bg-gray-400{% endif %}"></div>
                                    <span class="text-[#4B5563] font-medium">{{ dispo.jour ? dispo.jour.value|capitalize : '—' }}</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-[#6B7280]">
                                {% if dispo.heureDebut and dispo.heureFin %}
                                    <span class="inline-flex items-center gap-1">
                                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        {{ dispo.heureDebut|date('H:i') }} - {{ dispo.heureFin|date('H:i') }}
                                    </span>
                                {% else %}
                                    —
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-[#6B7280]">
                                <span class="inline-flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                    {{ dispo.duree }} min
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                {% if dispo.estDispo %}
                                    <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                        </svg>
                                        Actif
                                    </span>
                                {% else %}
                                    <span class="inline-flex items-center gap-1 px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" />
                                        </svg>
                                        Inactif
                                    </span>
                                {% endif %}
                            </td>
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-2">
                                    <a href="{{ path('doctor_availability_edit', { id: dispo.id }) }}" class="inline-flex items-center gap-1 px-3 py-1.5 text-sm rounded-lg bg-[#A7C7E7] text-white hover:bg-[#B8D4ED] transition-colors">
                                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10" />
                                        </svg>
                                        Modifier
                                    </a>
                                    <form action="{{ path('doctor_availability_delete', { id: dispo.id }) }}" method="post" class="inline" onsubmit="return confirm('Supprimer ce créneau horaire ? Cette action est irréversible.');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('doctor_availability_delete_' ~ dispo.id) }}">
                                        <button type="submit" class="inline-flex items-center gap-1 px-3 py-1.5 text-sm rounded-lg border border-[#E5E0D8] text-[#6B7280] hover:bg-red-50 hover:border-red-200 hover:text-red-600 transition-colors">
                                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
                                            </svg>
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="text-center py-12">
                    <svg class="w-16 h-16 text-[#E5E0D8] mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <h3 class="text-lg font-medium text-[#4B5563] mb-2">Aucune disponibilité configurée</h3>
                    <p class="text-[#6B7280] mb-6">Commencez par ajouter vos premiers créneaux horaires</p>
                    <button type="button" onclick="document.getElementById('btn-nouvelle-dispo').click()" class="px-6 py-3 rounded-xl bg-gradient-to-r from-[#A7C7E7] to-[#B8D4ED] text-white font-medium hover:shadow-lg transition-all transform hover:scale-105">
                        Ajouter une disponibilité
                    </button>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const btnNouvelleDispo = document.getElementById('btn-nouvelle-dispo');
    const btnCancelDispo = document.getElementById('btn-cancel-dispo');
    const formNouvelleDispo = document.getElementById('form-nouvelle-dispo');
    
    if (btnNouvelleDispo && formNouvelleDispo) {
        btnNouvelleDispo.addEventListener('click', function() {
            formNouvelleDispo.classList.remove('hidden');
            formNouvelleDispo.setAttribute('aria-hidden', 'false');
            formNouvelleDispo.scrollIntoView({ behavior: 'smooth', block: 'center' });
        });
    }
    
    if (btnCancelDispo && formNouvelleDispo) {
        btnCancelDispo.addEventListener('click', function() {
            formNouvelleDispo.classList.add('hidden');
            formNouvelleDispo.setAttribute('aria-hidden', 'true');
        });
    }
});
</script>
{% endblock %}
