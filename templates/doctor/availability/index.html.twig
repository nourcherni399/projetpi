{% extends 'layouts/doctor.html.twig' %}

{% block title %}Disponibilités - AutiCare Médecin{% endblock %}

{% block doctor_content %}
<style>
@keyframes slideInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
}
@keyframes fadeInScale {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
}
.animate-slideUp {
    animation: slideInUp 0.6s ease-out;
}
.animate-fadeScale {
    animation: fadeInScale 0.5s ease-out;
}
.animate-pulse-once {
    animation: pulse 0.3s ease-in-out;
}

/* Table Layout */
.availability-table {
    table-layout: fixed;
}
.availability-table th:nth-child(1) { width: 15%; }
.availability-table th:nth-child(2) { width: 20%; }
.availability-table th:nth-child(3) { width: 20%; }
.availability-table th:nth-child(4) { width: 15%; }
.availability-table th:nth-child(5) { width: 15%; }
.availability-table th:nth-child(6) { width: 15%; }

/* Force horizontal layout */
.availability-table td span {
    display: flex !important;
    flex-direction: row !important;
    align-items: center !important;
    gap: 0.5rem !important;
    white-space: nowrap !important;
}


/* Responsive Design */
@media (max-width: 768px) {
    .availability-table {
        font-size: 0.875rem !important;
    }
    .availability-table th,
    .availability-table td {
        padding: 0.75rem !important;
    }
    .availability-card {
        padding: 1rem !important;
    }
    .availability-table th:nth-child(1) { width: 20%; }
    .availability-table th:nth-child(2) { width: 25%; }
    .availability-table th:nth-child(3) { width: 25%; }
    .availability-table th:nth-child(4) { width: 15%; }
    .availability-table th:nth-child(5) { width: 15%; }
    .availability-table th:nth-child(6) { width: 10%; }
}
@media (max-width: 480px) {
    .availability-table {
        font-size: 0.75rem !important;
    }
    .availability-table th,
    .availability-table td {
        padding: 0.5rem !important;
    }
    .availability-card {
        padding: 0.75rem !important;
    }
    .availability-table th:nth-child(1) { width: 25%; }
    .availability-table th:nth-child(2) { width: 30%; }
    .availability-table th:nth-child(3) { width: 30%; }
    .availability-table th:nth-child(4) { width: 15%; }
    .availability-table th:nth-child(5) { width: 15%; }
    .availability-table th:nth-child(6) { width: 10%; }
}
</style>

<div id="form-nouvelle-dispo" class="mb-8 bg-white rounded-3xl shadow-xl border border-[#E5E0D8] overflow-hidden animate-fadeScale {% if not form.vars.submitted or form.vars.valid %}hidden{% endif %}" aria-hidden="{{ (form.vars.submitted and not form.vars.valid) ? 'false' : 'true' }}" style="animation-delay: 0.2s">
    <div class="p-6 border-b border-[#E5E0D8] bg-gradient-to-r from-[#F5F1EB] to-[#FAF8F5]">
        <h2 class="text-xl font-bold text-[#4B5563] flex items-center gap-2">
            <svg class="w-6 h-6 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            Nouvelle disponibilité
        </h2>
        <p class="text-sm text-[#6B7280] mt-2">Configurez vos créneaux horaires pour les rendez-vous</p>
    </div>
    <div class="p-8">
        {{ form_start(form, { attr: { class: 'space-y-6' } }) }}
        {{ form_errors(form) }}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="group flex items-center gap-4">
                {{ form_label(form.jour, null, { 'label_attr': { 'class': 'text-[#4B5563] font-bold w-32 flex-shrink-0' } }) }}
                {{ form_widget(form.jour, { attr: { class: 'flex-1 px-4 py-3 rounded-xl border border-[#E5E0D8] bg-white text-[#6B7280] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent transition-all duration-300 hover:border-[#A7C7E7]' } }) }}
                {{ form_errors(form.jour) }}
            </div>
            <div class="group flex items-center gap-4">
                {{ form_label(form.heureDebut, null, { 'label_attr': { 'class': 'text-[#4B5563] font-bold w-32 flex-shrink-0' } }) }}
                {{ form_widget(form.heureDebut, { attr: { class: 'flex-1 px-4 py-3 rounded-xl border border-[#E5E0D8] bg-white text-[#6B7280] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent transition-all duration-300 hover:border-[#A7C7E7]' } }) }}
                {{ form_errors(form.heureDebut) }}
            </div>
            <div class="group flex items-center gap-4">
                {{ form_label(form.heureFin, null, { 'label_attr': { 'class': 'text-[#4B5563] font-bold w-32 flex-shrink-0' } }) }}
                {{ form_widget(form.heureFin, { attr: { class: 'flex-1 px-4 py-3 rounded-xl border border-[#E5E0D8] bg-white text-[#6B7280] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent transition-all duration-300 hover:border-[#A7C7E7]' } }) }}
                {{ form_errors(form.heureFin) }}
            </div>
            <div class="group flex items-center gap-4">
                {{ form_label(form.duree, null, { 'label_attr': { 'class': 'text-[#4B5563] font-bold w-32 flex-shrink-0' } }) }}
                {{ form_widget(form.duree, { attr: { class: 'flex-1 px-4 py-3 rounded-xl border border-[#E5E0D8] bg-white text-[#6B7280] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent transition-all duration-300 hover:border-[#A7C7E7]' } }) }}
                {{ form_errors(form.duree) }}
            </div>
            <div class="flex items-center gap-3 md:col-span-2 p-4 rounded-xl bg-[#F5F1EB]/50">
                {{ form_widget(form.estDispo, { attr: { class: 'w-5 h-5 text-[#A7C7E7] rounded border-[#E5E0D8] focus:ring-2 focus:ring-[#A7C7E7]' } }) }}
                {{ form_label(form.estDispo, null, { 'label_attr': { 'class': 'text-[#4B5563] font-medium cursor-pointer' } }) }}
                {{ form_errors(form.estDispo) }}
            </div>
        </div>
        <div class="mt-8 flex gap-4">
            <button type="submit" class="group px-8 py-3 rounded-xl bg-gradient-to-r from-[#A7C7E7] to-[#B8D4ED] text-white font-bold hover:from-[#B8D4ED] hover:to-[#C9E1F3] shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 flex items-center gap-2">
                <svg class="w-5 h-5 group-hover:scale-110 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                </svg>
                Enregistrer la disponibilité
            </button>
        </div>
        {{ form_end(form) }}
    </div>
</div>

<div class="bg-white rounded-3xl shadow-xl border border-[#E5E0D8] overflow-hidden animate-fadeScale" style="animation-delay: 0.4s">
    <form method="get" action="{{ path('doctor_availability') }}" class="p-6 border-b border-[#E5E0D8] bg-gradient-to-r from-[#F5F1EB] to-[#FAF8F5] flex flex-wrap gap-4 justify-between items-center">
        <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <input type="search" name="q" value="{{ search|default('') }}" placeholder="Rechercher par jour, heure ou durée…" class="px-4 py-3 rounded-xl border border-[#E5E0D8] bg-white text-[#6B7280] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent transition-all duration-300 hover:border-[#A7C7E7] max-w-xs">
        </div>
        <button type="button" id="btn-nouvelle-dispo" class="group px-6 py-3 rounded-xl bg-gradient-to-r from-[#A7C7E7] to-[#B8D4ED] text-white font-bold hover:from-[#B8D4ED] hover:to-[#C9E1F3] shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 flex items-center gap-2">
            <svg class="w-5 h-5 group-hover:rotate-90 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
            </svg>
            Nouvelle disponibilité
        </button>
    </form>
    <div class="overflow-x-auto">
        <table class="w-full text-left availability-table table-fixed">
            <thead class="bg-gradient-to-r from-[#F5F1EB] to-[#FAF8F5] border-b-2 border-[#E5E0D8]">
                <tr>
                    <th class="px-6 py-4 font-bold text-[#4B5563] flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        Jour
                    </th>
                    <th class="px-6 py-4 font-bold text-[#4B5563] flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Heure début
                    </th>
                    <th class="px-6 py-4 font-bold text-[#4B5563] flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Heure fin
                    </th>
                    <th class="px-6 py-4 font-bold text-[#4B5563] flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Durée
                    </th>
                    <th class="px-6 py-4 font-bold text-[#4B5563] flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Disponible
                    </th>
                    <th class="px-6 py-4 font-bold text-[#4B5563] flex items-center gap-2">
                        <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                        </svg>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody class="divide-y divide-[#E5E0D8]">
                {% for dispo in disponibilites %}
                <tr class="hover:bg-gradient-to-r hover:from-[#F5F1EB]/30 hover:to-[#FAF8F5]/30 transition-all duration-300 group">
                    <td class="px-6 py-4">
                        {% if dispo.jour %}
                        <span class="px-3 py-1.5 rounded-lg bg-gradient-to-r from-[#A7C7E7]/20 to-[#B8D4ED]/30 text-[#4B5563] font-medium hover:from-[#A7C7E7]/30 hover:to-[#B8D4ED]/40 transition-all duration-300 whitespace-nowrap">
                            {{ dispo.jour.value|capitalize }}
                        </span>
                        {% else %}
                        <span class="text-[#6B7280]">—</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        {% if dispo.heureDebut %}
                        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg bg-gradient-to-r from-[#A7C7E7]/10 to-[#B8D4ED]/20 text-[#4B5563] font-medium hover:from-[#A7C7E7]/20 hover:to-[#B8D4ED]/30 transition-all duration-300">
                            <svg class="w-4 h-4 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {{ dispo.heureDebut|date('H:i') }}
                        </span>
                        {% else %}
                        <span class="text-[#6B7280]">—</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        {% if dispo.heureFin %}
                        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg bg-gradient-to-r from-[#A7C7E7]/10 to-[#B8D4ED]/20 text-[#4B5563] font-medium hover:from-[#A7C7E7]/20 hover:to-[#B8D4ED]/30 transition-all duration-300">
                            <svg class="w-4 h-4 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {{ dispo.heureFin|date('H:i') }}
                        </span>
                        {% else %}
                        <span class="text-[#6B7280]">—</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg bg-gradient-to-r from-[#A7C7E7]/10 to-[#B8D4ED]/20 text-[#4B5563] font-medium hover:from-[#A7C7E7]/20 hover:to-[#B8D4ED]/30 transition-all duration-300">
                            <svg class="w-4 h-4 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {{ dispo.duree }} min
                        </span>
                    </td>
                    <td class="px-6 py-4">
                        {% if dispo.estDispo %}
                        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-gradient-to-r from-green-500 to-green-600 text-white text-sm font-bold shadow-md hover:from-green-600 hover:to-green-700 transition-all duration-300 hover:scale-105">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                            </svg>
                            Oui
                        </span>
                        {% else %}
                        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-gradient-to-r from-red-500 to-red-600 text-white text-sm font-bold shadow-md hover:from-red-600 hover:to-red-700 transition-all duration-300 hover:scale-105">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                            Non
                        </span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        <div class="flex items-center gap-2">
                            <a href="{{ path('doctor_availability_edit', { id: dispo.id }) }}" class="p-2 rounded-lg bg-[#A7C7E7]/10 text-[#A7C7E7] hover:bg-[#A7C7E7]/20 hover:scale-110 transition-all duration-300 group">
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                                </svg>
                            </a>
                            <form action="{{ path('doctor_availability_delete', { id: dispo.id }) }}" method="post" class="inline" onsubmit="return confirm('Supprimer ce créneau ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('doctor_availability_delete_' ~ dispo.id) }}">
                                <button type="submit" class="p-2 rounded-lg bg-red-100 text-red-600 hover:bg-red-200 hover:scale-110 transition-all duration-300 group">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center">
                        <div class="flex flex-col items-center gap-4">
                            <div class="w-20 h-20 rounded-full bg-[#F5F1EB] flex items-center justify-center">
                                <svg class="w-10 h-10 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-[#6B7280] text-lg font-medium mb-2">Aucune disponibilité</p>
                                <p class="text-[#6B7280] text-sm mb-4">Commencez par ajouter une nouvelle disponibilité</p>
                                <button type="button" id="btn-nouvelle-dispo-2" class="inline-flex px-4 py-2 rounded-xl bg-gradient-to-r from-[#A7C7E7] to-[#B8D4ED] text-white font-medium hover:from-[#B8D4ED] hover:to-[#C9E1F3] transition-all duration-300">
                                    Ajouter une disponibilité
                                </button>
                            </div>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
document.getElementById('btn-nouvelle-dispo').addEventListener('click', function() {
    var formEl = document.getElementById('form-nouvelle-dispo');
    formEl.classList.toggle('hidden');
    formEl.setAttribute('aria-hidden', formEl.classList.contains('hidden'));
});

// Ajouter le même événement pour le deuxième bouton
var btn2 = document.getElementById('btn-nouvelle-dispo-2');
if (btn2) {
    btn2.addEventListener('click', function() {
        var formEl = document.getElementById('form-nouvelle-dispo');
        formEl.classList.remove('hidden');
        formEl.setAttribute('aria-hidden', 'false');
        // Scroll vers le formulaire
        formEl.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });
}
</script>
{% endblock %}
