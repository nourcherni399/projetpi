{% extends 'layouts/user.html.twig' %}

{% block title %}Nos Produits - AutiCare{% endblock %}

{% block user_content %}
<section class="text-center mb-10">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-[#A7C7E7]/20 text-[#A7C7E7] mb-4">
        <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" /></svg>
    </div>

    <h1 class="text-3xl font-bold text-[#4B5563] mb-3">Nos Produits</h1>

    <p class="text-[#6B7280] max-w-2xl mx-auto">
        Découvrez notre sélection de produits spécialisés pour la stimulation sensorielle, la concentration et l'apaisement. Chaque produit est soigneusement choisi pour répondre aux besoins des personnes autistes.
    </p>
</section>

<div class="flex flex-col lg:flex-row gap-8">

    <aside class="lg:w-64 shrink-0 space-y-6">
        <div class="bg-white rounded-xl shadow-sm p-5 border border-[#E5E0D8]">
            <h2 class="font-semibold text-[#4B5563] mb-4">Catégories</h2>

            <ul class="space-y-3 text-[#6B7280]">
                <li>
                    <a href="{{ path('user_products') }}" class="block px-3 py-2 rounded-lg {% if not selectedCategorie %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">
                        Toutes les catégories
                    </a>
                </li>
                {% for categorie in categories %}
                <li>
                    <a href="{{ path('user_products', {categorie: categorie.value}) }}" class="block px-3 py-2 rounded-lg {% if selectedCategorie == categorie.value %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">
                        {{ categorie.label() }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>

        <div class="bg-white rounded-xl shadow-sm p-5 border border-[#E5E0D8]">
            <h2 class="font-semibold text-[#4B5563] mb-4">Prix</h2>

            <div class="space-y-3 text-[#6B7280] text-sm">
                <a href="{{ path('user_products') }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) is null and maxPrice|default(null) is null %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">Tous les prix</a>

                <a href="{{ path('user_products', {minPrice: 0, maxPrice: 500000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '0' and maxPrice|default(null) == '500000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">0 — 500K د.ت</a>

                <a href="{{ path('user_products', {minPrice: 500000, maxPrice: 1000000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '500000' and maxPrice|default(null) == '1000000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">500K — 1M د.ت</a>

                <a href="{{ path('user_products', {minPrice: 1000000, maxPrice: 2000000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '1000000' and maxPrice|default(null) == '2000000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">1M — 2M د.ت</a>

                <a href="{{ path('user_products', {minPrice: 2000000, maxPrice: 5000000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '2000000' and maxPrice|default(null) == '5000000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">2M — 5M د.ت</a>

                <a href="{{ path('user_products', {minPrice: 5000000, maxPrice: 10000000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '5000000' and maxPrice|default(null) == '10000000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">5M — 10M د.ت</a>
            </div>
        </div>
    </aside>

    <div class="flex-1 min-w-0">
        <div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div>
                <h2 class="text-2xl font-bold text-[#4B5563] mb-1">Nos Produits</h2>
                <p class="text-[#6B7280]">{{ produits|length }} produit(s) trouvé(s)</p>
            </div>

            <div class="flex items-center gap-4">
                <input type="search" id="searchInput" placeholder="Rechercher un produit..." value="{{ search is defined ? search : '' }}" class="px-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] w-full md:w-64">
                <button id="clearSearch" class="px-3 py-2 rounded-lg border border-[#E5E0D8] text-[#6B280] hover:bg-[#F5F1EB] {% if search is not defined or search == '' %}hidden{% endif %}">
                    Effacer
                </button>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            {% if produits|length > 0 %}
                {% for produit in produits %}
                <article class="bg-white rounded-xl shadow-sm border border-[#E5E0D8] overflow-hidden flex flex-col produit-card" data-nom="{{ produit.nom|lower }}" data-categorie="{{ produit.categorie ? produit.categorie.label|lower : '' }}" data-description="{{ produit.description|lower }}" data-prix="{{ produit.prix }}">
                    <div class="aspect-square bg-[#F5F1EB] flex items-center justify-center text-[#6B280] text-sm">
                        {% if produit.image %}
                            <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" class="w-full h-full object-cover">
                        {% else %}
                            Image
                        {% endif %}
                    </div>

                    <div class="p-4 relative flex-1 flex flex-col">
                        <span class="absolute top-2 left-4 px-2 py-0.5 rounded text-xs font-medium text-white bg-[#A7C7E7]">{{ produit.categorie ? produit.categorie.label() : '—' }}</span>
                        <h2 class="font-semibold text-[#4B5563] mt-6">{{ produit.nom }}</h2>

                        {% if produit.description %}
                        <p class="text-[#6B280] text-sm mt-2 flex-1">{{ produit.description }}</p>
                        {% endif %}

                        <p class="font-semibold text-[#A7C7E7] mt-3">{{ produit.prix|number_format(2, ',', ' ') }} د.ت</p>

                        <div class="flex gap-2 mt-4">
                            <form method="POST" action="{{ path('cart_add', {id: produit.id}) }}" class="flex-1">
                                <input type="hidden" name="quantite" value="1">
                                <button type="submit" class="w-full inline-flex items-center justify-center gap-1 px-4 py-2 rounded-lg bg-[#A7C7E7] text-white text-sm font-medium hover:bg-[#B8D4ED]">Ajouter au panier</button>
                            </form>

                            <form method="POST" action="{{ path('favoris_add', {id: produit.id}) }}">
                                <button type="submit" class="p-2 rounded-lg border border-[#E5E0D8] text-red-500 hover:bg-red-50" aria-label="Ajouter aux favoris">
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                                    </svg>
                                </button>
                            </form>
                        </div>
                    </div>
                </article>
                {% endfor %}
            {% else %}
                <div class="col-span-full text-center py-12">
                    <p class="text-[#6B280]">Aucun produit trouvé dans cette catégorie.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {

    // Désactiver la recherche côté client si recherche côté serveur
    {% if search is defined and search is not empty %}
    console.log('Recherche côté serveur active - JavaScript désactivé');
    return; // Ne pas exécuter le JavaScript de recherche
    {% endif %}

    const searchInput = document.getElementById('searchInput');
    const clearSearchBtn = document.getElementById('clearSearch');
    const produitCards = document.querySelectorAll('.produit-card');
    const resultsCount = document.querySelector('p[class*="produit(s) trouvé(s)"]');

    // Fonction pour construire l'URL avec les paramètres actuels
    function buildUrl(searchTerm = null) {
        const urlParams = new URLSearchParams(window.location.search);
        
        if (searchTerm !== null) {
            if (searchTerm.trim() === '') {
                urlParams.delete('search');
            } else {
                urlParams.set('search', searchTerm);
            }
        }
        
        const newUrl = window.location.pathname + (urlParams.toString() ? '?' + urlParams.toString() : '');
        return newUrl;
    }
    
    // Recherche avec mise à jour de l'URL
    let searchTimeout;
    
    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        
        const searchTerm = this.value;
        
        // Délai pour éviter trop de requêtes
        searchTimeout = setTimeout(() => {
            window.location.href = buildUrl(searchTerm);
        }, 300);
    });
    
    // Recherche en temps réel pour les résultats déjà chargés
    function performClientSearch() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        
        let visibleCount = 0;
        
        produitCards.forEach(card => {
            const nom = card.getAttribute('data-nom');
            const categorie = card.getAttribute('data-categorie');
            const description = card.getAttribute('data-description');
            const prix = card.getAttribute('data-prix');
            
            const matchesSearch = nom.includes(searchTerm) || 
                                categorie.includes(searchTerm) || 
                                description.includes(searchTerm) ||
                                prix.includes(searchTerm);
            
            if (matchesSearch) {
                card.style.display = '';
                visibleCount++;
            } else {
                card.style.display = 'none';
            }
        });
        
        // Mettre à jour le compteur
        resultsCount.textContent = `${visibleCount} produit(s) trouvé(s)`;
        
        // Afficher/masquer le bouton effacer
        clearSearchBtn.classList.toggle('hidden', searchTerm === '');
    }
    
    // Bouton effacer
    clearSearchBtn.addEventListener('click', function() {
        window.location.href = buildUrl('');
    });
    
    // Appliquer la recherche côté client au chargement
    performClientSearch();
    
});
</script>

{% endblock %}
