{% extends 'layouts/user.html.twig' %}

{% block title %}Nos Produits - AutiCare{% endblock %}

{% block user_content %}
<section class="text-center mb-10">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-[#A7C7E7]/20 text-[#A7C7E7] mb-4">
        <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" /></svg>
    </div>
    <h1 class="text-3xl font-bold text-[#4B5563] mb-3">Nos Produits</h1>
    <p class="text-[#6B7280] max-w-2xl mx-auto">
        Découvrez notre sélection de produits spécialisés pour la stimulation sensorielle, la concentration et l'apaisement. Chaque produit est soigneusement choisi pour répondre aux besoins des personnes autistes.
    </p>
</section>

<div class="flex flex-col lg:flex-row gap-8">
    <aside class="lg:w-64 shrink-0 space-y-6">
        <div class="bg-white rounded-xl shadow-sm p-5 border border-[#E5E0D8]">
            <h2 class="font-semibold text-[#4B5563] mb-4">Catégories</h2>
            <ul class="space-y-3 text-[#6B7280]">
                <li>
                    <a href="{{ path('user_products_index') }}" class="block px-3 py-2 rounded-lg {% if not selectedCategorie %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">
                        Toutes les catégories
                    </a>
                </li>
                {% for categorie in categories %}
                <li>
                    <a href="{{ path('user_products_index', {categorie: categorie.value}) }}" class="block px-3 py-2 rounded-lg {% if selectedCategorie == categorie.value %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">
                        {{ categorie.label() }}
                    </a>
                </li>
                {% endfor %}
            </ul>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5 border border-[#E5E0D8]">
            <h2 class="font-semibold text-[#4B5563] mb-4">Prix</h2>
            <div class="space-y-3 text-[#6B7280] text-sm">
                <a href="{{ path('user_products_index') }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) is null and maxPrice|default(null) is null %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">Tous les prix</a>
                <a href="{{ path('user_products_index', {minPrice: 0, maxPrice: 500000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '0' and maxPrice|default(null) == '500000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">0 — 500K د.ت</a>
                <a href="{{ path('user_products_index', {minPrice: 500000, maxPrice: 1000000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '500000' and maxPrice|default(null) == '1000000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">500K — 1M د.ت</a>
                <a href="{{ path('user_products_index', {minPrice: 1000000, maxPrice: 2000000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '1000000' and maxPrice|default(null) == '2000000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">1M — 2M د.ت</a>
                <a href="{{ path('user_products_index', {minPrice: 2000000, maxPrice: 5000000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '2000000' and maxPrice|default(null) == '5000000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">2M — 5M د.ت</a>
                <a href="{{ path('user_products_index', {minPrice: 5000000, maxPrice: 10000000}) }}" class="block px-3 py-2 rounded-lg {% if minPrice|default(null) == '5000000' and maxPrice|default(null) == '10000000' %}bg-[#A7C7E7] text-white{% else %}hover:bg-[#F5F1EB]{% endif %}">5M — 10M د.ت</a>
            </div>
        </div>
    </aside>

    <div class="flex-1 min-w-0">
        <div class="mb-6 flex flex-col md:flex-row md:items-center md:justify-between gap-4">
            <div>
                <h2 class="text-2xl font-bold text-[#4B5563] mb-1">Nos Produits</h2>
                <p class="text-[#6B7280]">{{ produits|length }} produit(s) trouvé(s)</p>
            </div>
            <div class="flex flex-col md:flex-row items-start md:items-center gap-4">
                <div class="flex flex-col md:flex-row items-start md:items-center gap-3">
                    <div class="relative">
                        <div class="flex items-center space-x-3">
                            <div class="flex bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
                                <a href="{{ path('user_products_index', {sortBy: 'nom', sortOrder: 'asc'}) }}" class="px-4 py-2.5 text-sm font-medium transition-all duration-200 flex items-center gap-2 {% if sortBy == 'nom' and sortOrder == 'asc' %}bg-blue-500 text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"></path>
                                    </svg>
                                    <span>A→Z</span>
                                </a>
                                <a href="{{ path('user_products_index', {sortBy: 'nom', sortOrder: 'desc'}) }}" class="px-4 py-2.5 text-sm font-medium transition-all duration-200 flex items-center gap-2 {% if sortBy == 'nom' and sortOrder == 'desc' %}bg-blue-500 text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h9m5-4v12m0 0l-4-4m4 4l4-4"></path>
                                    </svg>
                                    <span>Z→A</span>
                                </a>
                            </div>
                            <div class="flex bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden">
                                <a href="{{ path('user_products_index', {sortBy: 'prix', sortOrder: 'asc'}) }}" class="px-4 py-2.5 text-sm font-medium transition-all duration-200 flex items-center gap-2 {% if sortBy == 'prix' and sortOrder == 'asc' %}bg-green-500 text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 11l5-5m0 0l5 5m-5-5v12"></path>
                                    </svg>
                                    <span>Prix +</span>
                                </a>
                                <a href="{{ path('user_products_index', {sortBy: 'prix', sortOrder: 'desc'}) }}" class="px-4 py-2.5 text-sm font-medium transition-all duration-200 flex items-center gap-2 {% if sortBy == 'prix' and sortOrder == 'desc' %}bg-green-500 text-white{% else %}text-gray-700 hover:bg-gray-50{% endif %}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 13l-5 5m0 0l-5-5m5 5V6"></path>
                                    </svg>
                                    <span>Prix -</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <form method="GET" action="{{ path('user_products_index') }}" class="flex items-center gap-2" id="form-search-produits">
                        {% if selectedCategorie|default('') != '' %}
                        <input type="hidden" name="categorie" value="{{ selectedCategorie }}">
                        {% endif %}
                        {% if minPrice|default('') != '' %}
                        <input type="hidden" name="minPrice" value="{{ minPrice }}">
                        {% endif %}
                        {% if maxPrice|default('') != '' %}
                        <input type="hidden" name="maxPrice" value="{{ maxPrice }}">
                        {% endif %}
                        {% if sortBy|default('nom') != 'nom' or sortOrder|default('asc') != 'asc' %}
                        <input type="hidden" name="sortBy" value="{{ sortBy|default('nom') }}">
                        <input type="hidden" name="sortOrder" value="{{ sortOrder|default('asc') }}">
                        {% endif %}
                        <input type="text" name="search" placeholder="Rechercher un produit..." value="{{ search|default('') }}" class="px-4 py-2 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#4B5563] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] w-full md:w-64" autocomplete="off">
                        <button type="submit" class="px-3 py-2 rounded-lg border border-[#E5E0D8] text-[#6B7280] hover:bg-[#F5F1EB]">
                            Rechercher
                        </button>
                        {% if search|default('') != '' %}
                            {% set params_effacer = {} %}
                            {% if selectedCategorie|default('') != '' %}
                                {% set params_effacer = params_effacer|merge({categorie: selectedCategorie}) %}
                            {% endif %}
                            {% if minPrice|default('') != '' %}
                                {% set params_effacer = params_effacer|merge({minPrice: minPrice}) %}
                            {% endif %}
                            {% if maxPrice|default('') != '' %}
                                {% set params_effacer = params_effacer|merge({maxPrice: maxPrice}) %}
                            {% endif %}
                            {% if sortBy|default('nom') != 'nom' or sortOrder|default('asc') != 'asc' %}
                                {% set params_effacer = params_effacer|merge({sortBy: sortBy|default('nom'), sortOrder: sortOrder|default('asc')}) %}
                            {% endif %}
                            <a href="{{ path('user_products_index', params_effacer) }}" class="px-3 py-2 rounded-lg border border-[#E5E0D8] text-[#6B7280] hover:bg-[#F5F1EB]">
                                Effacer
                            </a>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
            {% if produits|length > 0 %}
                {% for produit in produits %}
                <article class="bg-white rounded-xl shadow-sm border border-[#E5E0D8] overflow-hidden flex flex-col produit-card" data-nom="{{ produit.nom|lower }}" data-categorie="{{ produit.categorie ? produit.categorie.label|lower : '' }}" data-description="{{ produit.description|lower }}" data-prix="{{ produit.prix }}">
                    <div class="aspect-square bg-[#F5F1EB] flex items-center justify-center text-[#6B7280] text-sm overflow-hidden">
                        {% if produit.image %}
                            <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" class="w-full h-full object-cover">
                        {% else %}
                            Image
                        {% endif %}
                    </div>
                    <div class="p-4 relative flex-1 flex flex-col">
                        <span class="absolute top-2 left-4 px-2 py-0.5 rounded text-xs font-medium text-white bg-[#A7C7E7]">{{ produit.categorie ? produit.categorie.label() : '—' }}</span>
                        <h2 class="font-semibold text-[#4B5563] mt-6">{{ produit.nom }}</h2>
                        {% if produit.description %}
                        <p class="text-[#6B7280] text-sm mt-2 flex-1 line-clamp-2">{{ produit.description }}</p>
                        {% endif %}
                        <p class="font-semibold text-[#A7C7E7] mt-3">{{ produit.prix|number_format(2, ',', ' ') }} د.ت</p>
                        <div class="flex gap-2 mt-4">
                            <a href="{{ path('user_product_show', { id: produit.id }) }}" class="inline-flex items-center justify-center gap-1 flex-1 px-4 py-2 rounded-lg bg-[#A7C7E7] text-white text-sm font-medium hover:bg-[#B8D4ED]">Voir détails</a>
                            {% if cart_add is defined and produit.disponibilite and app.user %}
                            <form method="POST" action="{{ path('cart_add', { id: produit.id }) }}" class="inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('cart_add_' ~ produit.id) }}">
                                <button type="submit" class="p-2 rounded-lg border border-[#E5E0D8] text-[#6B7280] hover:bg-[#F5F1EB] inline-flex items-center justify-center" aria-label="Ajouter au panier"><svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" /></svg></button>
                            </form>
                            {% endif %}
                        </div>
                    </div>
                </article>
                {% endfor %}
            {% else %}
                <div class="col-span-full text-center py-12">
                    <p class="text-[#6B7280]">Aucun produit trouvé dans cette catégorie.</p>
                </div>
            {% endif %}
        </div>

        {# Discussion / assistant pour suggérer des produits selon le besoin #}
        <section class="mt-12 pt-8 border-t border-[#E5E0D8]">
            <div class="flex flex-col lg:flex-row gap-8">
                <div class="lg:w-96 shrink-0">
                    <h2 class="text-xl font-bold text-[#4B5563] mb-2">Besoin d'aide ?</h2>
                    <p class="text-[#6B7280] text-sm mb-4">Décrivez votre besoin (ex. : mon enfant a besoin de se calmer, je cherche des jeux pour la communication) et recevez des suggestions de produits.</p>
                    <div class="bg-white rounded-xl border border-[#E5E0D8] shadow-sm overflow-hidden flex flex-col" style="min-height: 320px;">
                        <div id="chat-messages" class="flex-1 p-4 space-y-3 overflow-y-auto min-h-[180px] max-h-[240px] bg-[#F9FAFB]">
                            <div class="flex gap-2 justify-start">
                                <span class="flex-shrink-0 w-8 h-8 rounded-full bg-[#A7C7E7] flex items-center justify-center text-white text-sm font-medium">A</span>
                                <div class="rounded-2xl rounded-bl-md px-4 py-2 bg-white border border-[#E5E0D8] text-[#4B5563] text-sm shadow-sm max-w-[85%]">
                                    Bonjour ! Décrivez en quelques mots votre situation ou le type de produit que vous cherchez (sensoriel, relaxation, jeu, communication, etc.), et je vous proposerai des produits adaptés.
                                </div>
                            </div>
                        </div>
                        <div class="p-3 border-t border-[#E5E0D8] bg-white">
                            <form id="form-chat-besoin" class="flex gap-2">
                                <input type="text" name="message" id="input-chat-besoin" placeholder="Ex. : besoin de calme pour le coucher..." class="flex-1 px-4 py-2.5 rounded-lg border border-[#E5E0D8] text-[#4B5563] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7]" autocomplete="off">
                                <button type="submit" class="px-4 py-2.5 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] shrink-0">Envoyer</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="flex-1 min-w-0">
                    <h3 class="text-lg font-semibold text-[#4B5563] mb-3">Suggestions pour votre cas</h3>
                    <div id="suggest-products" class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 gap-4 min-h-[120px]">
                        <p id="suggest-placeholder" class="col-span-full text-[#9CA3AF] text-sm">Envoyez un message ci-contre pour afficher des produits suggérés.</p>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<script>
(function() {
    var form = document.getElementById('form-chat-besoin');
    var input = document.getElementById('input-chat-besoin');
    var messages = document.getElementById('chat-messages');
    var container = document.getElementById('suggest-products');
    var placeholder = document.getElementById('suggest-placeholder');
    var suggestUrl = '{{ path('user_products_suggest')|e('js') }}';
    var productShowPath = '{{ path('user_product_show', { id: 0 })|e('js') }}';
    var assetBase = '{{ asset('')|e('js') }}';

    function addMessage(text, isUser) {
        var wrap = document.createElement('div');
        wrap.className = 'flex gap-2 ' + (isUser ? 'justify-end' : 'justify-start');
        var bubble = document.createElement('div');
        bubble.className = (isUser ? 'rounded-2xl rounded-br-md px-4 py-2 bg-[#A7C7E7] text-white text-sm shadow-sm max-w-[85%]' : 'rounded-2xl rounded-bl-md px-4 py-2 bg-white border border-[#E5E0D8] text-[#4B5563] text-sm shadow-sm max-w-[85%]');
        bubble.textContent = text;
        if (isUser) {
            var avatar = document.createElement('span');
            avatar.className = 'flex-shrink-0 w-8 h-8 rounded-full bg-[#A7C7E7]/50 flex items-center justify-center text-white text-xs font-medium';
            avatar.textContent = 'Vous';
            wrap.appendChild(bubble);
            wrap.appendChild(avatar);
        } else {
            var avatarBot = document.createElement('span');
            avatarBot.className = 'flex-shrink-0 w-8 h-8 rounded-full bg-[#A7C7E7] flex items-center justify-center text-white text-sm font-medium';
            avatarBot.textContent = 'A';
            wrap.appendChild(avatarBot);
            wrap.appendChild(bubble);
        }
        messages.appendChild(wrap);
        messages.scrollTop = messages.scrollHeight;
    }

    function renderProducts(products) {
        placeholder.style.display = 'none';
        container.innerHTML = '';
        if (!products || products.length === 0) {
            container.innerHTML = '<p class="col-span-full text-[#6B7280] text-sm">Aucun produit suggéré.</p>';
            return;
        }
        products.forEach(function(p) {
            var card = document.createElement('article');
            card.className = 'bg-white rounded-xl shadow-sm border border-[#E5E0D8] overflow-hidden flex flex-col';
            var imgSrc = p.image ? (assetBase + p.image) : '';
            card.innerHTML =
                '<div class="aspect-square bg-[#F5F1EB] flex items-center justify-center overflow-hidden">' +
                (imgSrc ? '<img src="' + imgSrc + '" alt="" class="w-full h-full object-cover">' : '<span class="text-[#6B7280] text-sm">Image</span>') +
                '</div>' +
                '<div class="p-4 flex-1 flex flex-col">' +
                '<span class="inline-block px-2 py-0.5 rounded text-xs font-medium text-white bg-[#A7C7E7] w-fit mb-2">' + (p.categorie || '—') + '</span>' +
                '<h3 class="font-semibold text-[#4B5563]">' + (p.nom || '') + '</h3>' +
                (p.description ? '<p class="text-[#6B7280] text-sm mt-1 line-clamp-2">' + (p.description || '') + '</p>' : '') +
                '<p class="font-semibold text-[#A7C7E7] mt-2">' + (typeof p.prix === 'number' ? p.prix.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ' ') : p.prix) + ' د.ت</p>' +
                '<a href="' + productShowPath.replace('/0', '/' + p.id) + '" class="mt-3 inline-flex justify-center px-4 py-2 rounded-lg bg-[#A7C7E7] text-white text-sm font-medium hover:bg-[#B8D4ED]">Voir détails</a>' +
                '</div>';
            container.appendChild(card);
        });
    }

    if (form && input) {
        form.addEventListener('submit', function(e) {
            e.preventDefault();
            var msg = (input.value || '').trim();
            if (!msg) return;
            addMessage(msg, true);
            input.value = '';
            input.disabled = true;
            var btn = form.querySelector('button[type="submit"]');
            if (btn) btn.disabled = true;

            var body = new FormData();
            body.append('message', msg);

            fetch(suggestUrl, { method: 'POST', body: body })
                .then(function(r) { return r.json(); })
                .then(function(data) {
                    addMessage(data.reply || 'Voici des suggestions.', false);
                    renderProducts(data.products || []);
                })
                .catch(function() {
                    addMessage('Désolé, une erreur s\'est produite. Réessayez.', false);
                })
                .finally(function() {
                    input.disabled = false;
                    if (btn) btn.disabled = false;
                    input.focus();
                });
        });
    }
})();
</script>
{% endblock %}