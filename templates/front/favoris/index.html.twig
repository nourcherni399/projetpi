{% extends 'layouts/user.html.twig' %}

{% block title %}Mes Favoris - AutiCare{% endblock %}

{% block user_content %}
<section class="text-center mb-10">
    <h1 class="text-3xl font-bold text-[#4B5563] mb-3">Mes Favoris</h1>
    <p class="text-[#6B280] max-w-2xl mx-auto">
        Retrouvez ici tous les produits que vous avez ajoutés à vos favoris.
    </p>
</section>

{% if favoris is empty %}
<div class="max-w-md mx-auto text-center py-16">
    <div class="w-24 h-24 bg-[#F5F1EB] rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-12 h-12 text-[#6B280]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
        </svg>
    </div>
    <h3 class="text-xl font-semibold text-[#4B5563] mb-3">Vous n'avez pas encore de favoris</h3>
    <p class="text-[#6B280] mb-6">Commencez à ajouter des produits que vous aimez pour les retrouver facilement ici.</p>
    <a href="{{ path('user_products_index') }}" class="inline-flex items-center gap-2 px-6 py-3 bg-[#A7C7E7] text-white rounded-lg font-medium hover:bg-[#B8D4ED] transition">
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 10-7.5 0v4.5m11.356-1.993l1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 01-1.12-1.243l1.264-12A1.125 1.125 0 015.513 7.5h12.974c.576 0 1.059.435 1.119 1.007zM8.625 10.5a.375.375 0 11-.75 0 .375.375 0 01.75 0zm7.5 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
        </svg>
        Découvrir les produits
    </a>
</div>
{% else %}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    {% for favori in favoris %}
        {% set produit = favori.produit %}
        <div class="bg-white rounded-xl shadow-sm border border-[#E5E0D8] overflow-hidden hover:shadow-lg transition">
            <div class="relative">
                {% if produit.image %}
                    <img src="{{ asset(produit.image) }}" alt="{{ produit.nom }}" class="w-full h-48 object-cover">
                {% else %}
                    <div class="w-full h-48 bg-[#E5E0D8] flex items-center justify-center">
                        <svg class="w-12 h-12 text-[#6B280]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15a4.5 4.5 0 004.5 4.5H18a3.75 3.75 0 001.332-7.257 3 3 0 00-3.75-3.75h-1.5a1.5 1.5 0 01-1.5-1.5V10a5.25 5.25 0 00-5.25-5.25H6.75A2.25 2.25 0 004.5 7.25v7.5z" />
                        </svg>
                    </div>
                {% endif %}
                
                {% if produit.categorie %}
                    <span class="absolute top-3 left-3 px-3 py-1 bg-white/90 backdrop-blur-sm rounded-full text-xs font-medium text-[#4B5563]">
                        {{ produit.categorie.label }}
                    </span>
                {% endif %}
            </div>
            
            <div class="p-4">
                <h3 class="font-semibold text-[#4B5563] mb-2 line-clamp-2">{{ produit.nom }}</h3>
                
                <div class="flex items-center justify-between mb-4">
                    <span class="text-xl font-bold text-[#A7C7E7]">{{ produit.prix|number_format(2, ',', ' ') }} د.ت</span>
                    {% if produit.disponibilite %}
                        <span class="px-2 py-1 bg-green-100 text-green-800 text-xs font-medium rounded-full">Disponible</span>
                    {% else %}
                        <span class="px-2 py-1 bg-red-100 text-red-800 text-xs font-medium rounded-full">Indisponible</span>
                    {% endif %}
                </div>
                
                <div class="flex gap-2">
                    <form method="POST" action="{{ path('cart_add', {id: produit.id}) }}" class="flex-1">
                        <button type="submit" class="w-full px-3 py-2 bg-[#A7C7E7] text-white rounded-lg text-sm font-medium hover:bg-[#B8D4ED] transition">
                            Ajouter au panier
                        </button>
                    </form>
                    
                    <form method="POST" action="{{ path('favoris_remove', {id: produit.id}) }}" class="flex-shrink-0">
                        <button type="submit" class="p-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200 transition" title="Retirer des favoris">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" />
                            </svg>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}
