{# templates/front/blog/_commentaires.html.twig #}

<div class="space-y-6">
    {% if commentaires|length > 0 %}
        <h3 class="text-xl font-semibold text-[#4B5563] mb-6">
            Commentaires ({{ commentaires|length }})
        </h3>
        
        {% for commentaire in commentaires|sort((a, b) => b.dateCreation <=> a.dateCreation) %}
            <div class="bg-white rounded-xl border border-[#E5E0D8] p-6 hover:shadow-md transition-shadow">
                <div class="flex items-start gap-4">
                    <!-- Avatar utilisateur -->
                    <div class="flex-shrink-0">
                        {% if commentaire.user %}
                            <div class="w-10 h-10 rounded-full bg-[#A7C7E7] flex items-center justify-center text-white font-semibold">
                                {{ commentaire.user.nom|first }}{{ commentaire.user.prenom|first }}
                            </div>
                        {% else %}
                            <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center text-gray-600">
                                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </svg>
                            </div>
                        {% endif %}
                    </div>
                    
                    <!-- Contenu du commentaire -->
                    <div class="flex-1">
                        <div class="flex items-center justify-between mb-2">
                            <div>
                                <h4 class="font-semibold text-[#4B5563]">
                                    {% if commentaire.user %}
                                        {{ commentaire.user.nom }} {{ commentaire.user.prenom }}
                                    {% else %}
                                        Utilisateur anonyme
                                    {% endif %}
                                </h4>
                                <p class="text-sm text-[#6B7280]">
                                    Le {{ commentaire.dateCreation|date('d/m/Y à H:i') }}
                                </p>
                            </div>
                            
                            <!-- Actions du commentaire -->
                            {% if app.user and (commentaire.user and commentaire.user.id == app.user.id or is_granted('ROLE_ADMIN')) %}
                                <div class="flex items-center gap-2">
                                    <form method="post" action="{{ path('commentaire_supprimer', {'id': commentaire.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce commentaire ?');" class="inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commentaire.id) }}">
                                        <button type="submit" class="text-red-500 hover:text-red-700 text-sm" title="Supprimer">
                                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            {% endif %}
                        </div>
                        
                        <div class="prose prose-sm max-w-none">
                            <p class="text-[#4B5563] whitespace-pre-wrap">{{ commentaire.contenu }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <div class="text-center py-8">
            <svg class="w-12 h-12 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <p class="text-gray-500">Soyez le premier à commenter cet article !</p>
        </div>
    {% endif %}
</div>
