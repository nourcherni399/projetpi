{% extends 'layouts/user.html.twig' %}

{% block title %}{{ article.titre }} - {{ module.titre }} - AutiCare{% endblock %}

{% block user_content %}
<article class="max-w-4xl mx-auto">
    <!-- Navigation -->
    <div class="mb-6">
        <nav class="flex items-center gap-2 text-sm text-[#6B7280]">
            <a href="{{ path('user_blog') }}" class="hover:text-[#A7C7E7]">Modules & Témoignages</a>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
            <a href="{{ path('user_blog_module', {'id': module.id}) }}" class="hover:text-[#A7C7E7]">{{ module.titre }}</a>
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
            </svg>
            <span class="text-[#4B5563] font-medium">{{ article.titre }}</span>
        </nav>
    </div>

    <!-- En-tête de l'article -->
    <header class="bg-white rounded-xl border border-[#E5E0D8] p-6 md:p-8 mb-8">
        <div class="flex items-start gap-4 mb-6">
            <!-- Image de l'article -->
            {% if article.image %}
                <div class="flex-shrink-0">
                    <img src="{{ asset(article.image) }}" alt="{{ article.titre }}" class="w-20 h-20 object-cover rounded-lg">
                </div>
            {% endif %}
            
            <div class="flex-1">
                <!-- Titre et badges -->
                <div class="flex items-center gap-3 mb-3">
                    <h1 class="text-3xl font-bold text-[#4B5563]">{{ article.titre }}</h1>
                </div>
                
                <!-- Métadonnées -->
                <div class="flex flex-wrap items-center gap-4 text-sm text-[#6B7280]">
                    <span class="inline-flex px-3 py-1 text-xs font-medium rounded-full
                        {% if article.type == 'recommandation' %}bg-blue-100 text-blue-800
                        {% elseif article.type == 'plainte' %}bg-red-100 text-red-800
                        {% elseif article.type == 'question' %}bg-yellow-100 text-yellow-800
                        {% else %}bg-gray-100 text-gray-800{% endif %}">
                        {{ article.type|capitalize }}
                    </span>
                    
                    {% if article.isUrgent %}
                        <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">Urgent</span>
                    {% endif %}
                    
                    <span>Par {{ article.user ? article.user.email : 'Anonyme' }}</span>
                    <span>Le {{ article.dateCreation|date('d/m/Y à H:i') }}</span>
                    
                    {% if article.dateModif and article.dateModif != article.dateCreation %}
                        <span>Modifié le {{ article.dateModif|date('d/m/Y à H:i') }}</span>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <!-- Module associé -->
        <div class="flex items-center gap-3 p-3 bg-[#F5F1EB] rounded-lg border border-[#E5E0D8]">
            <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.256A8.967 8.967 0 016 18c2.295 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.256A8.967 8.967 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
            </svg>
            <div>
                <p class="text-sm font-medium text-[#4B5563]">Module : {{ module.titre }}</p>
                <p class="text-xs text-[#6B7280]">{{ module.niveau|capitalize }} • {{ module.categorie ? module.categorie.label : 'Non défini' }}</p>
            </div>
            <a href="{{ path('user_blog_module', {'id': module.id}) }}" class="ml-auto inline-flex items-center gap-2 px-3 py-1.5 text-sm bg-[#A7C7E7] text-white rounded-lg hover:bg-[#B8D4ED] transition-colors">
                Voir le module
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
            </a>
        </div>
    </header>

    <!-- Contenu de l'article -->
    <div class="bg-white rounded-xl border border-[#E5E0D8] p-6 md:p-8 mb-8">
        <div class="prose prose-[#4B5563] max-w-none">
            {% if article.contenu %}
                <div class="text-[#4B5563] whitespace-pre-wrap break-words text-lg leading-relaxed">
                    {{ article.contenu }}
                </div>
            {% else %}
                <p class="text-[#6B7280]">Aucun contenu disponible.</p>
            {% endif %}
        </div>
    </div>

    <!-- Actions -->
    <div class="bg-white rounded-xl border border-[#E5E0D8] p-6">
        <div class="flex flex-wrap gap-4 justify-between items-center">
            <div class="flex gap-3">
                {% if is_granted('IS_AUTHENTICATED_FULLY') and article.user == app.user %}
                    <a href="{{ path('user_blog_edit_article', {'id': article.id, 'moduleId': module.id}) }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-700 focus:outline focus:ring-2 focus:ring-blue-500">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                        Modifier
                    </a>
                    
                    <form method="post" action="{{ path('user_blog_delete_article', {'id': article.id, 'moduleId': module.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet article ?');" class="inline">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                        <button type="submit" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-lg bg-red-600 text-white font-medium hover:bg-red-700 focus:outline focus:ring-2 focus:ring-red-500">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                            Supprimer
                        </button>
                    </form>
                {% endif %}
            </div>
            
            <div class="flex gap-3">
                <button onclick="window.print()" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-lg border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
                    </svg>
                    Imprimer
                </button>
                
                <a href="{{ path('user_blog_module', {'id': module.id}) }}" class="inline-flex items-center gap-2 px-4 py-2.5 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                    </svg>
                    Retour au module
                </a>
            </div>
        </div>
    </div>

    <!-- Articles similaires -->
    {% set similarArticles = module.blogs|filter(blog => blog.isPublished and blog.id != article.id)|slice(0, 3) %}
    {% if similarArticles|length > 0 %}
        <div class="mt-8">
            <h2 class="text-xl font-semibold text-[#4B5563] mb-4">Autres articles dans ce module</h2>
            <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
                {% for similarArticle in similarArticles %}
                    <div class="bg-white rounded-xl border border-[#E5E0D8] p-4 hover:shadow-md transition-shadow">
                        <div class="flex items-start gap-3">
                            {% if similarArticle.image %}
                                <img src="{{ asset(similarArticle.image) }}" alt="{{ similarArticle.titre }}" class="w-12 h-12 object-cover rounded-lg flex-shrink-0">
                            {% endif %}
                            <div class="flex-1 min-w-0">
                                <h3 class="font-medium text-[#4B5563] truncate">{{ similarArticle.titre }}</h3>
                                <p class="text-sm text-[#6B7280] mt-1">{{ similarArticle.dateCreation|date('d/m/Y') }}</p>
                                <a href="{{ path('user_blog_show_article', {'id': similarArticle.id}) }}" class="inline-flex items-center gap-1 text-[#A7C7E7] hover:text-[#B8D4ED] text-sm font-medium mt-2">
                                    Lire
                                    <svg class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
</article>
{% endblock %}
