{% extends 'layouts/user.html.twig' %}

{% block title %}Blog & Témoignages - AutiCare{% endblock %}

{% block user_content %}
<section class="text-center mb-10">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full border-2 border-[#A7C7E7] bg-[#A7C7E7]/10 text-[#A7C7E7] mb-4">
        <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.256A8.967 8.967 0 016 18c2.295 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.256A8.967 8.967 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" /></svg>
    </div>
    <h1 class="text-3xl font-bold text-[#4B5563] mb-3">Blog & Témoignages</h1>
    <p class="text-[#6B7280] max-w-2xl mx-auto">
        Partagez vos expériences, découvrez des conseils pratiques et rejoignez les discussions de notre communauté bienveillante.
    </p>
</section>

<div class="flex flex-col lg:flex-row gap-8">
    <div class="flex-1 min-w-0 space-y-8">
        <!-- Section Modules par Catégorie -->
        <div class="bg-gradient-to-br from-[#A7C7E7]/10 to-[#95d7b5]/10 rounded-2xl border border-[#A7C7E7]/20 p-6">
            <h2 class="text-2xl font-bold text-[#4B5563] mb-6 flex items-center gap-3">
                <div class="w-8 h-8 rounded-full bg-[#A7C7E7]/20 flex items-center justify-center">
                    <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                </div>
                Modules d'apprentissage
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for module in modules %}
                <article class="bg-white rounded-xl shadow-lg border border-[#E5E0D8]/50 overflow-hidden hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
                    <!-- Image du module -->
                    <div class="aspect-[16/10] w-full overflow-hidden bg-gradient-to-br from-[#A7C7E7]/20 to-[#95d7b5]/20 relative">
                        {% if module.image %}
                            <img src="{{ asset(module.image) }}" alt="{{ module.titre }}" class="w-full h-full object-cover">
                        {% else %}
                            <div class="w-full h-full flex flex-col items-center justify-center text-[#4B5563] p-4">
                                <div class="w-12 h-12 rounded-full bg-white/50 flex items-center justify-center mb-2">
                                    <svg class="w-6 h-6 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                    </svg>
                                </div>
                                <span class="text-sm font-medium">Module</span>
                            </div>
                        {% endif %}

                        <!-- Badge de niveau -->
                        <div class="absolute top-3 right-3">
                            <span class="px-2 py-1 rounded-full text-xs font-medium
                                {% if module.niveau == 'facile' %}bg-green-100 text-green-800
                                {% elseif module.niveau == 'moyen' %}bg-yellow-100 text-yellow-800
                                {% else %}bg-red-100 text-red-800{% endif %}">
                                {{ module.niveau|capitalize }}
                            </span>
                        </div>
                    </div>

                    <!-- Contenu du module -->
                    <div class="p-5">
                        <div class="flex flex-wrap gap-2 mb-3">
                            <span class="px-2 py-1 rounded-md text-xs font-medium bg-[#E5E0D8]/60 text-[#4B5563]">Module</span>
                            {% if module.categorie.label() %}
                                <span class="px-2 py-1 rounded-md text-xs font-medium bg-[#A7C7E7]/20 text-[#4B5563]">{{ module.categorie.label() }}</span>
                            {% endif %}
                        </div>

                        <h3 class="text-lg font-bold text-[#4B5563] mb-3 line-clamp-2">{{ module.titre }}</h3>
                        <p class="text-[#6B7280] text-sm mb-4 line-clamp-3">{{ module.description }}</p>

                        <!-- Métadonnées -->
                        <div class="flex items-center justify-between pt-3 border-t border-[#E5E0D8]/50">
                            <div class="flex items-center gap-3 text-xs text-[#6B7280]">
                                <div class="flex items-center gap-1">
                                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                    {{ module.dateCreation ? module.dateCreation|date('d F Y') : 'Date inconnue' }}
                                </div>
                            </div>
                            <a href="{{ path('user_blog_module', { id: module.id }) }}"
                               class="inline-flex items-center gap-1 px-3 py-1.5 rounded-lg bg-[#A7C7E7] text-white text-sm font-medium hover:bg-[#B8D4ED] transition-colors">
                                <span>Explorer</span>
                                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>
                    </div>
                </article>
                {% endfor %}
            </div>
        </div>
        
        <!-- Article en vedette -->
        <article class="bg-white rounded-2xl shadow-sm border border-[#E5E0D8] overflow-hidden">
            <div class="p-6 md:p-8">
                <div class="flex flex-col md:flex-row gap-6 md:gap-8">
                    <div class="md:w-2/5 shrink-0 flex items-center justify-center">
                        <div class="w-full aspect-square max-w-xs bg-gradient-to-br from-[#A7C7E7]/20 to-[#95d7b5]/20 rounded-xl flex items-center justify-center text-[#6B7280] text-sm text-center px-4">
                            <div class="text-center">
                                <svg class="w-12 h-12 mx-auto mb-2 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                                </svg>
                                Illustration TSA
                            </div>
                        </div>
                    </div>
                    <div class="flex-1 min-w-0">
                        <h2 class="text-xl font-bold text-[#4B5563] mb-2">{{ featured.infographic_title }}</h2>
                        <p class="text-[#6B7280] text-sm mb-4">{{ featured.infographic_description }}</p>
                        <p class="text-sm text-[#6B7280] mb-3">Pas de cause unique identifiée</p>
                        <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-lg bg-[#A7C7E7]/30 text-[#4B5563] text-sm font-medium">
                            TOUCHE 1 personne sur 100 • 3 garçons pour 1 fille
                        </span>
                    </div>
                </div>
            </div>
        </article>
    </div>

    <aside class="lg:w-80 shrink-0 space-y-6">
        <div class="bg-white rounded-xl shadow-sm p-5 border border-[#E5E0D8]">
            <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-[#6B7280]">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" /></svg>
                </span>
                <input type="search" placeholder="Rechercher un article..." class="w-full pl-10 pr-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
            </div>
        </div>
        <div id="ecrire-article" class="bg-white rounded-xl shadow-sm p-5 border border-[#E5E0D8]">
            <div class="inline-flex items-center justify-center w-12 h-12 rounded-full border-2 border-[#A7C7E7] bg-[#A7C7E7]/10 text-[#A7C7E7] mb-3">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" /></svg>
            </div>
            <h2 class="font-semibold text-[#4B5563] mb-2">Partagez votre histoire</h2>
            <p class="text-[#6B7280] text-sm mb-4">Votre expérience peut aider d'autres familles. Écrivez votre témoignage.</p>
            <a href="#ecrire-article" class="inline-block px-4 py-2.5 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">Écrire un article</a>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5 border border-[#E5E0D8]">
            <h2 class="font-semibold text-[#4B5563] mb-4">Catégories</h2>
            <div class="space-y-3">
                {% for cat in categories %}
                <a href="{{ path('user_blog_categorie', {'categorie': cat.slug}) }}" class="flex items-center gap-3 p-2 rounded-lg hover:bg-[#A7C7E7]/10 transition-colors">
                    <img src="{{ asset(cat.image) }}" alt="{{ cat.name }}" class="w-10 h-10 rounded-lg object-cover">
                    <div class="flex-1">
                        <div class="font-medium text-[#4B5563]">{{ cat.name }}</div>
                        <div class="text-sm text-[#6B7280]">{{ cat.count }} modules</div>
                    </div>
                </a>
                {% endfor %}
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5 border border-[#E5E0D8]">
            <h2 class="font-semibold text-[#4B5563] mb-4">Articles populaires</h2>
            <ul class="space-y-3 text-sm">
                {% for pop in popular_articles %}
                <li><a href="{{ path('user_blog_module', { id: pop.id }) }}" class="text-[#6B7280] hover:text-[#A7C7E7] line-clamp-2">{{ pop.title }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5 border border-[#E5E0D8]">
            <h2 class="font-semibold text-[#4B5563] mb-4">Tags populaires</h2>
            <div class="flex flex-wrap gap-2">
                {% for tag in popular_tags %}
                <a href="#" class="px-3 py-1.5 rounded-full bg-[#E5E0D8]/80 text-[#A7C7E7] text-sm font-medium hover:bg-[#A7C7E7]/20">{{ tag }}</a>
                {% endfor %}
            </div>
        </div>
    </aside>
</div>
{% endblock %}
