{% extends 'layouts/user.html.twig' %}

{% block title %}Prendre rendez-vous - {{ doctor.name }} - AutiCare{% endblock %}

{% block user_content %}
{% set stepParams = { id: doctor.id, etape: 1, disponibilite_id: choices.disponibilite_id, date_rdv: choices.date_rdv, date_label: choices.date_label } %}
{% set linkStep2 = stepParams|merge({ etape: 2, type: choices.type, mode: choices.mode, motif: choices.motif }) %}
{% set linkStep3 = stepParams|merge({ etape: 3, type: choices.type, mode: choices.mode, motif: choices.motif }) %}
<style>
.rdv-slot.rdv-selected { 
    border-color: #A7C7E7 !important; 
    background: linear-gradient(135deg, rgba(167,199,231,0.15) 0%, rgba(184,212,237,0.15) 100%) !important; 
    color: #4B5563 !important;
    transform: scale(1.02);
    box-shadow: 0 8px 25px rgba(167,199,231,0.3);
}
.rdv-type-option:has(input:checked), .rdv-mode-option:has(input:checked) { 
    border-color: #A7C7E7 !important; 
    background: linear-gradient(135deg, rgba(167,199,231,0.1) 0%, rgba(184,212,237,0.1) 100%) !important;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(167,199,231,0.25);
}
.rdv-type-option, .rdv-mode-option { 
    border: 2px solid #E5E0D8; 
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
}
.rdv-type-option:hover, .rdv-mode-option:hover { 
    border-color: #A7C7E7; 
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(167,199,231,0.2);
}
.rdv-type-option::before, .rdv-mode-option::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(167,199,231,0.1), transparent);
    transition: left 0.5s;
}
.rdv-type-option:hover::before, .rdv-mode-option:hover::before {
    left: 100%;
}

@keyframes slideInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
}
@keyframes fadeInScale {
    from { opacity: 0; transform: scale(0.9); }
    to { opacity: 1; transform: scale(1); }
}
@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
}
.animate-slideUp {
    animation: slideInUp 0.6s ease-out;
}
.animate-fadeScale {
    animation: fadeInScale 0.5s ease-out;
}
.animate-pulse-once {
    animation: pulse 0.3s ease-in-out;
}

/* Responsive Design */
@media (max-width: 768px) {
    .rdv-slot {
        padding: 1rem !important;
        flex-direction: column !important;
        text-align: center !important;
        gap: 0.5rem !important;
    }
    .rdv-type-option, .rdv-mode-option {
        padding: 0.75rem !important;
    }
}
@media (max-width: 480px) {
    .rdv-slot {
        padding: 0.75rem !important;
    }
    .rdv-type-option, .rdv-mode-option {
        padding: 0.5rem !important;
        font-size: 0.875rem !important;
    }
}
</style>
<div class="flex flex-col lg:flex-row gap-8 mb-12 animate-slideUp">
    <aside class="lg:w-96 shrink-0">
        <a href="{{ path('user_appointments') }}" class="inline-flex items-center gap-2 text-[#6B7280] hover:text-[#A7C7E7] mb-4 focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] rounded-lg px-3 py-2 transition-all duration-300 hover:bg-[#F5F1EB] group">
            <svg class="w-4 h-4 group-hover:-translate-x-1 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            Retour à la liste
        </a>
        <div class="bg-white rounded-3xl shadow-xl border border-[#E5E0D8] p-8 sticky top-4 hover:shadow-2xl transition-all duration-500 animate-fadeScale">
            <div class="flex items-center gap-4 mb-6">
                <div class="relative group">
                    <span class="flex items-center justify-center w-16 h-16 rounded-2xl bg-gradient-to-br from-[#A7C7E7] to-[#B8D4ED] text-white font-bold text-lg shadow-lg group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">{{ doctor.initials }}</span>
