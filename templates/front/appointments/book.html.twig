{% extends 'layouts/user.html.twig' %}

{% block title %}Prendre rendez-vous - {{ doctor.name }} - AutiCare{% endblock %}

{% block user_content %}
{% set stepParams = { id: doctor.id, etape: 1, disponibilite_id: choices.disponibilite_id, date_rdv: choices.date_rdv, date_label: choices.date_label } %}
{% set linkStep2 = stepParams|merge({ etape: 2, type: choices.type, mode: choices.mode, motif: choices.motif }) %}
{% set linkStep3 = stepParams|merge({ etape: 3, type: choices.type, mode: choices.mode, motif: choices.motif }) %}
<style>
.rdv-slot.rdv-selected { border-color: #A7C7E7 !important; background-color: rgba(167,199,231,0.15) !important; color: #4B5563 !important; }
.rdv-type-option:has(input:checked), .rdv-mode-option:has(input:checked) { border-color: #A7C7E7 !important; background-color: rgba(167,199,231,0.1) !important; }
.rdv-type-option, .rdv-mode-option { border: 2px solid #E5E0D8; transition: border-color 0.2s, background-color 0.2s; }
.rdv-type-option:hover, .rdv-mode-option:hover { border-color: rgba(167,199,231,0.6); }
</style>
<div class="flex flex-col lg:flex-row gap-8 mb-12">
    <aside class="lg:w-96 shrink-0">
        <a href="{{ path('user_appointments') }}" class="inline-flex items-center gap-1 text-[#6B7280] hover:text-[#A7C7E7] mb-4 focus:outline focus:ring-2 focus:ring-[#A7C7E7] rounded">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            Retour à la liste
        </a>
        <div class="bg-white rounded-2xl shadow-sm border border-[#E5E0D8] p-6 sticky top-4">
            <div class="flex items-center gap-4 mb-4">
                <span class="flex items-center justify-center w-14 h-14 rounded-full bg-[#95d7b5] text-[#4B5563] font-semibold text-sm">{{ doctor.initials }}</span>
                <div>
                    <h2 class="font-bold text-[#4B5563]">{{ doctor.name }}</h2>
                    <span class="inline-block px-2 py-0.5 rounded-full text-xs font-medium {{ doctor.specialty_class }}">{{ doctor.specialty }}</span>
                </div>
            </div>
            <p class="text-[#6B7280] text-sm mb-4">{{ doctor.description }}</p>
            <div class="space-y-2 text-sm text-[#6B7280] mb-4">
                <p class="flex items-center gap-2"><svg class="w-4 h-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /></svg> {{ doctor.address }}</p>
                <p class="flex items-center gap-2"><svg class="w-4 h-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg> {{ doctor.phone }}</p>
                <p class="flex items-center gap-2"><svg class="w-4 h-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg> {{ doctor.email }}</p>
            </div>
            <div class="flex gap-2 mb-4">
                {% if doctor.has_cabinet %}<span class="px-3 py-1.5 rounded-lg border border-[#E5E0D8] text-[#6B7280] text-sm">Cabinet</span>{% endif %}
            </div>
            <p class="font-semibold text-[#4B5563]">{{ doctor.price }} DT <span class="text-sm font-normal text-[#6B7280]">Tarif de la consultation</span></p>
        </div>
    </aside>

    <div class="flex-1 min-w-0">
        {% for message in app.flashes('error') %}
        <div class="mb-4 p-4 rounded-xl bg-red-50 border border-red-200 text-red-800 text-sm flex items-start gap-2" role="alert">
            <svg class="w-5 h-5 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <span>{{ message }}</span>
        </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
        <div class="mb-4 p-4 rounded-xl bg-emerald-50 border border-emerald-200 text-emerald-800 text-sm flex items-start gap-2" role="alert">
            <svg class="w-5 h-5 shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
            <span>{{ message }}</span>
        </div>
        {% endfor %}

        {% if require_login|default(false) %}
        <div class="mb-6 p-6 md:p-8 rounded-2xl bg-[#E8F4FC] border-2 border-[#A7C7E7] text-[#4B5563]">
            <div class="flex items-start gap-4">
                <span class="shrink-0 flex items-center justify-center w-14 h-14 rounded-full bg-[#A7C7E7] text-white">
                    <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>
                </span>
                <div class="min-w-0 flex-1">
                    <h2 class="text-xl font-bold text-[#4B5563] mb-2">Vous devez vous connecter</h2>
                    <p class="text-[#6B7280] mb-6">Pour prendre rendez-vous avec {{ doctor.name }}, connectez-vous à votre compte ou créez-en un.</p>
                    <div class="flex flex-wrap gap-3">
                        {% set _login_params = return_uri|default('') != '' ? { _target_path: return_uri } : {} %}
                        <a href="{{ path('app_login', _login_params) }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
                            Se connecter
                        </a>
                        <a href="{{ path('register', _login_params) }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-full border-2 border-[#A7C7E7] text-[#4B5563] font-medium hover:bg-[#A7C7E7]/10 focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
                            Créer un compte
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}

        {% if not require_login|default(false) %}
        <div id="rdv-step-alert" class="hidden mb-4 p-4 rounded-xl bg-amber-50 border border-amber-200 text-amber-800 text-sm flex items-center gap-2" role="alert">
            <svg class="w-5 h-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" /></svg>
            <span>Veuillez d'abord compléter l'étape 1 (choisir un créneau) avant de passer à cette étape.</span>
        </div>
        <div class="flex flex-wrap items-center gap-2 mb-8 text-sm">
            <a href="{{ path('user_appointment_book', stepParams) }}" class="flex items-center gap-1 {% if step >= 1 %}text-[#A7C7E7] font-medium{% else %}text-[#6B7280]{% endif %}">
                {% if step > 1 %}<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>{% else %}<span class="flex items-center justify-center w-6 h-6 rounded-full bg-[#A7C7E7] text-white text-xs">1</span>{% endif %}
                Créneau
            </a>
            <span class="text-[#E5E0D8]">›</span>
            <a href="{{ path('user_appointment_book', linkStep2) }}" class="rdv-step-link flex items-center gap-1 {% if step >= 2 %}text-[#A7C7E7] font-medium{% else %}text-[#6B7280]{% endif %}" data-step="2">
                {% if step > 2 %}<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>{% else %}<span class="flex items-center justify-center w-6 h-6 rounded-full {% if step == 2 %}bg-[#A7C7E7] text-white{% else %}bg-[#E5E0D8] text-[#6B7280]{% endif %} text-xs">2</span>{% endif %}
                Type
            </a>
            <span class="text-[#E5E0D8]">›</span>
            <a href="{{ path('user_appointment_book', linkStep3) }}" class="rdv-step-link flex items-center gap-1 {% if step >= 3 %}text-[#A7C7E7] font-medium{% else %}text-[#6B7280]{% endif %}" data-step="3">
                {% if step > 3 %}<svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>{% else %}<span class="flex items-center justify-center w-6 h-6 rounded-full {% if step == 3 %}bg-[#A7C7E7] text-white{% else %}bg-[#E5E0D8] text-[#6B7280]{% endif %} text-xs">3</span>{% endif %}
                Vos informations
            </a>
            <span class="text-[#E5E0D8]">›</span>
            <span class="flex items-center gap-1 {% if step == 4 %}text-[#A7C7E7] font-medium{% else %}text-[#6B7280]{% endif %}">
                <span class="flex items-center justify-center w-6 h-6 rounded-full {% if step == 4 %}bg-[#A7C7E7] text-white{% else %}bg-[#E5E0D8] text-[#6B7280]{% endif %} text-xs">4</span>
                Confirmation
            </span>
        </div>

        <div class="bg-white rounded-2xl shadow-sm border border-[#E5E0D8] p-6 md:p-8">
            {% if step == 1 %}
            {% set filter_days = filter_days|default([]) %}
            <h2 class="text-xl font-bold text-[#4B5563] mb-2">Choisissez votre créneau</h2>
            <p class="text-[#6B7280] mb-6">Sélectionnez le jour et l'heure qui vous conviennent le mieux.</p>
            {% if slots is defined and slots|length > 0 %}
            <form method="get" action="{{ path('user_appointment_book', { id: doctor.id }) }}" id="rdv-form-step1">
                <input type="hidden" name="etape" value="2">
                <input type="hidden" name="disponibilite_id" id="rdv-dispo" value="{{ choices.disponibilite_id|default('') }}">
                <input type="hidden" name="date_rdv" id="rdv-date" value="{{ choices.date_rdv|default('') }}">
                <input type="hidden" name="date_label" id="rdv-label" value="{{ choices.date_label|default('') }}">
                <div class="flex flex-wrap gap-2 mb-6" role="tablist" aria-label="Filtrer par jour">
                    <button type="button" class="rdv-filter-day px-4 py-2 rounded-lg border-2 font-medium text-sm transition-colors bg-[#A7C7E7] border-[#A7C7E7] text-white" data-day="">Tous</button>
                    {% for day in filter_days %}
                    <button type="button" class="rdv-filter-day px-4 py-2 rounded-lg border-2 border-[#E5E0D8] bg-white text-[#4B5563] font-medium text-sm hover:border-[#A7C7E7] hover:bg-[#A7C7E7]/5 transition-colors" data-day="{{ day|e('html_attr') }}">{{ day }}</button>
                    {% endfor %}
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 mb-6 rdv-slots-container">
                    {% for slot in slots %}
                    {% if slot.available is defined and slot.available == true %}
                    <button type="button" class="rdv-slot rdv-slot-available rdv-slot-card text-left px-5 py-4 rounded-xl border-2 border-[#E5E0D8] bg-white text-[#4B5563] hover:border-[#A7C7E7] hover:bg-[#A7C7E7]/5 font-medium transition-colors {% if choices.disponibilite_id == slot.disponibilite_id and choices.date_rdv == slot.date_rdv %}rdv-selected{% endif %}" data-dispo="{{ slot.disponibilite_id }}" data-date="{{ slot.date_rdv }}" data-label="{{ slot.label }}" data-day="{{ slot.day_name|default('')|e('html_attr') }}">
                        <span class="inline-block px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800 mb-2">{{ slot.day_name|default('') }}</span>
                        <span class="block font-bold text-[#4B5563] text-lg">{{ slot.time_range|default(slot.label) }}</span>
                        <span class="block text-[#6B7280] text-sm font-normal mt-1">{{ slot.label }}</span>
                    </button>
                    {% else %}
                    <div class="rdv-slot-blocked rdv-slot-card px-5 py-4 rounded-xl border-2 border-red-500 bg-red-50 text-left relative cursor-not-allowed select-none pointer-events-none" tabindex="-1" role="status" aria-label="Créneau indisponible" data-day="{{ slot.day_name|default('')|e('html_attr') }}" data-blocked="true">
                        <span class="inline-block px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-200 text-red-800 mb-2">{{ slot.day_name|default('') }}</span>
                        <span class="absolute top-3 right-3 flex items-center justify-center w-8 h-8 rounded-full bg-red-400 text-red-700 border-2 border-red-500" aria-hidden="true">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5"><path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" /></svg>
                        </span>
                        <span class="block font-bold text-red-900 text-lg pr-10">{{ slot.time_range|default(slot.label) }}</span>
                        <span class="block text-red-800 text-sm font-normal mt-1">{{ slot.label }}</span>
                        <span class="inline-block mt-2 text-sm font-semibold text-red-700">Créneau indisponible</span>
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
                <div class="flex flex-wrap items-center justify-between gap-4 mb-6">
                    <p class="text-sm text-[#6B7280] flex items-center gap-2">
                        <span class="flex items-center justify-center w-5 h-5 rounded-full bg-[#A7C7E7]/20 text-[#A7C7E7] font-bold text-xs" aria-hidden="true">i</span>
                        Les créneaux rouges sont déjà réservés.
                    </p>
                    <button type="submit" id="rdv-btn-continuer-step1" class="inline-flex items-center gap-1 px-6 py-3 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] disabled:opacity-50 disabled:cursor-not-allowed" {% if not choices.disponibilite_id or not choices.date_rdv or not (selected_slot_available|default(true)) %}disabled{% endif %} title="Choisissez un créneau disponible (blanc) pour continuer">Continuer <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg></button>
                </div>
            </form>
            <script>
            (function() {
                var dispo = document.getElementById('rdv-dispo');
                var date = document.getElementById('rdv-date');
                var label = document.getElementById('rdv-label');
                var btnContinuer = document.getElementById('rdv-btn-continuer-step1');
                var slotsContainer = document.querySelector('.rdv-slots-container');
                var filterBtns = document.querySelectorAll('.rdv-filter-day');
                var slotCards = document.querySelectorAll('.rdv-slot-card');
                var availableBtns = document.querySelectorAll('.rdv-slot-available');
                function filterByDay(day) {
                    slotCards.forEach(function(card) {
                        var cardDay = card.getAttribute('data-day') || '';
                        card.style.display = (day === '' || cardDay === day) ? '' : 'none';
                    });
                    filterBtns.forEach(function(btn) {
                        var isActive = (btn.getAttribute('data-day') || '') === day;
                        btn.classList.toggle('bg-[#A7C7E7]', isActive);
                        btn.classList.toggle('border-[#A7C7E7]', isActive);
                        btn.classList.toggle('text-white', isActive);
                        btn.classList.toggle('bg-white', !isActive);
                        btn.classList.toggle('border-[#E5E0D8]', !isActive);
                        btn.classList.toggle('text-[#4B5563]', !isActive);
                    });
                }
                filterBtns.forEach(function(btn) {
                    btn.addEventListener('click', function() {
                        filterByDay(this.getAttribute('data-day') || '');
                    });
                });
                function updateContinuerState() {
                    var hasSlot = dispo && date && dispo.value && date.value;
                    if (btnContinuer) btnContinuer.disabled = !hasSlot;
                }
                availableBtns.forEach(function(btn) {
                    btn.addEventListener('click', function() {
                        availableBtns.forEach(function(b) { b.classList.remove('rdv-selected'); });
                        this.classList.add('rdv-selected');
                        if (dispo) dispo.value = this.getAttribute('data-dispo');
                        if (date) date.value = this.getAttribute('data-date');
                        if (label) label.value = this.getAttribute('data-label');
                        updateContinuerState();
                    });
                });
                updateContinuerState();
            })();
            </script>
            {% else %}
            <p class="text-[#6B7280] mb-6">Aucun créneau pour les 4 prochaines semaines. Revenez plus tard ou choisissez un autre médecin.</p>
            <a href="{{ path('user_appointments') }}" class="inline-flex px-6 py-3 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED]">Voir les autres médecins</a>
            {% endif %}
            <script>
            (function() {
                var formStep1 = document.getElementById('rdv-form-step1');
                var alertEl = document.getElementById('rdv-step-alert');
                var dispoInput = document.getElementById('rdv-dispo');
                var dateInput = document.getElementById('rdv-date');
                document.querySelectorAll('.rdv-step-link').forEach(function(link) {
                    link.addEventListener('click', function(e) {
                        if (formStep1 && alertEl && link.getAttribute('data-step') !== '1') {
                            var hasSlot = (dispoInput && dateInput && dispoInput.value && dateInput.value);
                            if (!hasSlot) {
                                e.preventDefault();
                                alertEl.classList.remove('hidden');
                                alertEl.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
                                setTimeout(function() { alertEl.classList.add('hidden'); }, 6000);
                            }
                        }
                    });
                });
            })();
            </script>
            {% endif %}

            {% if step == 2 %}
            <form method="get" action="{{ path('user_appointment_book', { id: doctor.id }) }}" id="rdv-form-step2">
                <input type="hidden" name="etape" value="3">
                <input type="hidden" name="disponibilite_id" value="{{ choices.disponibilite_id }}">
                <input type="hidden" name="date_rdv" value="{{ choices.date_rdv }}">
                <input type="hidden" name="date_label" value="{{ choices.date_label }}">
                <h2 class="text-xl font-bold text-[#4B5563] mb-6">Type de consultation</h2>
                <p class="text-[#4B5563] font-medium mb-3">Type de rendez-vous</p>
                <div class="space-y-3 mb-6">
                    <label class="rdv-type-option flex items-center gap-3 p-4 rounded-xl cursor-pointer">
                        <input type="radio" name="type" value="premiere" {% if choices.type == 'premiere' %}checked{% endif %} class="rounded-full border-[#E5E0D8] text-[#A7C7E7] focus:ring-[#A7C7E7]">
                        <span class="font-medium text-[#4B5563]">Première consultation</span>
                        <span class="text-[#6B7280] text-sm">Durée: 60 min</span>
                    </label>
                    <label class="rdv-type-option flex items-center gap-3 p-4 rounded-xl cursor-pointer">
                        <input type="radio" name="type" value="bilan" {% if choices.type == 'bilan' %}checked{% endif %} class="rounded-full border-[#E5E0D8] text-[#A7C7E7] focus:ring-[#A7C7E7]">
                        <span class="font-medium text-[#4B5563]">Bilan complet</span>
                        <span class="text-[#6B7280] text-sm">Durée: 90 min</span>
                    </label>
                    <label class="rdv-type-option flex items-center gap-3 p-4 rounded-xl cursor-pointer">
                        <input type="radio" name="type" value="suivi" {% if choices.type == 'suivi' %}checked{% endif %} class="rounded-full border-[#E5E0D8] text-[#A7C7E7] focus:ring-[#A7C7E7]">
                        <span class="font-medium text-[#4B5563]">Consultation de suivi</span>
                        <span class="text-[#6B7280] text-sm">Durée: 45 min</span>
                    </label>
                    <label class="rdv-type-option flex items-center gap-3 p-4 rounded-xl cursor-pointer">
                        <input type="radio" name="type" value="urgent" {% if choices.type == 'urgent' %}checked{% endif %} class="rounded-full border-[#E5E0D8] text-[#A7C7E7] focus:ring-[#A7C7E7]">
                        <span class="font-medium text-[#4B5563]">Consultation urgente</span>
                        <span class="text-[#6B7280] text-sm">Durée: 30 min</span>
                    </label>
                </div>
                <input type="hidden" name="mode" value="cabinet">
                <p class="text-[#4B5563] font-medium mb-3">Mode de consultation</p>
                <p class="text-[#6B7280] mb-6">Au cabinet</p>
                <div class="mb-8">
                    <label class="block text-[#4B5563] font-medium mb-2">Motif de la consultation <span class="text-red-500">*</span></label>
                    <select name="motif" class="w-full px-4 py-2.5 rounded-lg border {% if motif_error|default('') %}border-red-500{% else %}border-[#E5E0D8]{% endif %} bg-white text-[#6B7280] focus:outline focus:ring-2 {% if motif_error|default('') %}focus:ring-red-500{% else %}focus:ring-[#A7C7E7]{% endif %}">
                        <option value="">Sélectionnez un motif</option>
                        <option value="Diagnostic TSA" {% if choices.motif == 'Diagnostic TSA' %}selected{% endif %}>Diagnostic TSA</option>
                        <option value="Suivi thérapeutique" {% if choices.motif == 'Suivi thérapeutique' %}selected{% endif %}>Suivi thérapeutique</option>
                        <option value="Bilan" {% if choices.motif == 'Bilan' %}selected{% endif %}>Bilan</option>
                    </select>
                    {% if motif_error|default('') %}
                        <p class="mt-1 text-sm text-red-600">{{ motif_error }}</p>
                    {% endif %}
                </div>
                <div class="flex justify-between">
                    <a href="{{ path('user_appointment_book', stepParams) }}" class="px-6 py-3 rounded-lg border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB]">&lt; Retour</a>
                    <button type="submit" class="inline-flex items-center gap-1 px-6 py-3 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED]">Continuer <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" /></svg></button>
                </div>
            </form>
            {% endif %}

            {% if step == 3 %}
            <h2 class="text-xl font-bold text-[#4B5563] mb-6">Vos informations</h2>
            <form method="post" action="{{ path('user_appointment_submit', { id: doctor.id }) }}" class="space-y-4 mb-8" novalidate="novalidate">
                <input type="hidden" name="_token" value="{{ csrf_token('rdv_submit') }}">
                <input type="hidden" name="disponibilite_id" value="{{ choices.disponibilite_id }}">
                <input type="hidden" name="date_rdv" value="{{ choices.date_rdv }}">
                <input type="hidden" name="date_label" value="{{ choices.date_label }}">
                <input type="hidden" name="type" value="{{ choices.type }}">
                <input type="hidden" name="mode" value="{{ choices.mode }}">
                <input type="hidden" name="motif" value="{{ choices.motif }}">
                <input type="hidden" name="motif_key" value="{{ choices.type == 'urgent' ? 'urgence' : (choices.type == 'suivi' ? 'suivie' : 'normal') }}">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-[#4B5563] font-medium mb-1">Nom <span class="text-red-500">*</span></label>
                        <input type="text" name="nom" value="{{ form_rdv.nom|default('')|e('html_attr') }}" placeholder="Votre nom" class="w-full px-4 py-2.5 rounded-lg border bg-white text-[#6B7280] focus:outline focus:ring-2 {% if form_errors.nom|default('') %}border-red-500 focus:ring-red-500{% else %}border-[#E5E0D8] focus:ring-[#A7C7E7]{% endif %}">
                        {% if form_errors.nom|default('') %}<p class="mt-1 text-sm text-red-600">{{ form_errors.nom }}</p>{% endif %}
                    </div>
                    <div>
                        <label class="block text-[#4B5563] font-medium mb-1">Prénom <span class="text-red-500">*</span></label>
                        <input type="text" name="prenom" value="{{ form_rdv.prenom|default('')|e('html_attr') }}" placeholder="Votre prénom" class="w-full px-4 py-2.5 rounded-lg border bg-white text-[#6B7280] focus:outline focus:ring-2 {% if form_errors.prenom|default('') %}border-red-500 focus:ring-red-500{% else %}border-[#E5E0D8] focus:ring-[#A7C7E7]{% endif %}">
                        {% if form_errors.prenom|default('') %}<p class="mt-1 text-sm text-red-600">{{ form_errors.prenom }}</p>{% endif %}
                    </div>
                </div>
                <div>
                    <label class="block text-[#4B5563] font-medium mb-1">Téléphone <span class="text-red-500">*</span></label>
                    <input type="tel" name="telephone" value="{{ form_rdv.telephone|default('')|e('html_attr') }}" placeholder="06 12 34 56 78" class="w-full px-4 py-2.5 rounded-lg border bg-white text-[#6B7280] focus:outline focus:ring-2 {% if form_errors.telephone|default('') %}border-red-500 focus:ring-red-500{% else %}border-[#E5E0D8] focus:ring-[#A7C7E7]{% endif %}">
                    {% if form_errors.telephone|default('') %}<p class="mt-1 text-sm text-red-600">{{ form_errors.telephone }}</p>{% endif %}
                </div>
                <div>
                    <label class="block text-[#4B5563] font-medium mb-1">Adresse <span class="text-red-500">*</span></label>
                    <input type="text" name="adresse" value="{{ form_rdv.adresse|default('')|e('html_attr') }}" placeholder="Votre adresse" class="w-full px-4 py-2.5 rounded-lg border bg-white text-[#6B7280] focus:outline focus:ring-2 {% if form_errors.adresse|default('') %}border-red-500 focus:ring-red-500{% else %}border-[#E5E0D8] focus:ring-[#A7C7E7]{% endif %}">
                    {% if form_errors.adresse|default('') %}<p class="mt-1 text-sm text-red-600">{{ form_errors.adresse }}</p>{% endif %}
                </div>
                <div>
                    <label class="block text-[#4B5563] font-medium mb-1">Date de naissance du patient <span class="text-red-500">*</span></label>
                    <input type="date" name="date_naissance" value="{{ form_rdv.date_naissance|default('')|e('html_attr') }}" class="w-full px-4 py-2.5 rounded-lg border bg-white text-[#6B7280] focus:outline focus:ring-2 {% if form_errors.date_naissance|default('') %}border-red-500 focus:ring-red-500{% else %}border-[#E5E0D8] focus:ring-[#A7C7E7]{% endif %}">
                    {% if form_errors.date_naissance|default('') %}<p class="mt-1 text-sm text-red-600">{{ form_errors.date_naissance }}</p>{% endif %}
                </div>
                <div>
                    <label class="block text-[#4B5563] font-medium mb-1">Notes (optionnel)</label>
                    <textarea name="note" rows="3" placeholder="Informations utiles pour le praticien..." class="w-full px-4 py-2.5 rounded-lg border bg-white text-[#6B7280] focus:outline focus:ring-2 {% if form_errors.note|default('') %}border-red-500 focus:ring-red-500{% else %}border-[#E5E0D8] focus:ring-[#A7C7E7]{% endif %}">{{ form_rdv.note|default('')|e('html') }}</textarea>
                    {% if form_errors.note|default('') %}<p class="mt-1 text-sm text-red-600">{{ form_errors.note }}</p>{% endif %}
                </div>
                <div class="bg-[#F5F1EB] rounded-xl p-4 mb-6">
                    <h3 class="font-semibold text-[#4B5563] mb-3">Récapitulatif</h3>
                    <ul class="text-[#6B7280] text-sm space-y-1">
                        <li>Créneau: {{ choices.date_label|default('—') }}</li>
                        <li>Type: {{ choices.type_label }}</li>
                        <li>Mode: {{ choices.mode_label }}</li>
                        {% if choices.motif %}<li>Motif: {{ choices.motif }}</li>{% endif %}
                        <li class="font-semibold text-[#4B5563] pt-2">Tarif: {{ doctor.price }} DT</li>
                    </ul>
                </div>
                <div class="flex justify-between">
                    <a href="{{ path('user_appointment_book', linkStep2) }}" class="px-6 py-3 rounded-lg border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB]">&lt; Retour</a>
                    <button type="submit" class="px-6 py-3 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED]">Envoyer ma demande</button>
                </div>
            </form>
            {% endif %}

            {% if step == 4 %}
            <div class="text-center py-8">
                <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-amber-100 text-amber-600 mb-6">
                    <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                </div>
                <h2 class="text-2xl font-bold text-[#4B5563] mb-2">Demande envoyée</h2>
                <p class="text-[#6B7280] mb-8">Le médecin va recevoir votre demande et pourra l'accepter ou la refuser. Vous serez notifié de sa réponse.</p>
                <div class="bg-[#F5F1EB] rounded-xl p-6 mb-8 text-left max-w-md mx-auto">
                    <h3 class="font-semibold text-[#4B5563] mb-3">Détails de la demande</h3>
                    <ul class="text-[#6B7280] text-sm space-y-2">
                        <li><strong class="text-[#4B5563]">Praticien:</strong> {{ doctor.name }}</li>
                        <li><strong class="text-[#4B5563]">Créneau:</strong> {{ choices.date_label|default('—') }}</li>
                        <li><strong class="text-[#4B5563]">Type:</strong> {{ choices.type_label }}</li>
                        <li><strong class="text-[#4B5563]">Mode:</strong> {{ choices.mode_label }}</li>
                        <li><strong class="text-[#4B5563]">Lieu:</strong> {{ doctor.address }}</li>
                    </ul>
                </div>
                <div class="flex flex-wrap gap-4 justify-center">
                    <a href="{{ path('user_appointments') }}" class="inline-flex px-6 py-3 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED]">Prendre un autre RDV</a>
                    <a href="{{ path('home') }}" class="inline-flex px-6 py-3 rounded-lg border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB]">Accueil</a>
                </div>
            </div>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
