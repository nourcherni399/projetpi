            {% else %}
            <li class="bg-white rounded-3xl shadow-lg border border-[#E5E0D8] p-16 text-center animate-fadeIn">
                <div class="w-20 h-20 mx-auto mb-6 rounded-full bg-[#F5F1EB] flex items-center justify-center">
                    <svg class="w-10 h-10 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
