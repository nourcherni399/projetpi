{% extends 'layouts/user.html.twig' %}

{% block title %}Prendre un rendez-vous - AutiCare{% endblock %}

{% block user_content %}
<section class="mb-8 animate-fadeIn">
    <div class="relative overflow-hidden rounded-3xl bg-gradient-to-r from-[#A7C7E7] via-[#B8D4ED] to-[#C9E1F3] p-8 shadow-xl">
        <div class="absolute inset-0 bg-black opacity-5"></div>
        <div class="relative z-10 text-center">
            <h1 class="text-4xl font-bold text-white mb-3 drop-shadow-lg">Prendre un rendez-vous</h1>
            <p class="text-white/90 text-lg max-w-2xl mx-auto">Consultez nos médecins et spécialistes, puis réservez votre créneau en quelques clics.</p>
        </div>
    </div>
    
    {% if stats %}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8 mt-8 max-w-2xl mx-auto">
        <div class="group bg-white rounded-2xl p-6 border border-[#E5E0D8] shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 text-center">
            <div class="flex items-center justify-center gap-3 mb-2">
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#A7C7E7] to-[#B8D4ED] flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                </div>
                <span class="font-bold text-2xl text-[#4B5563]">{{ stats.total_medecins }}</span>
            </div>
            <span class="text-sm text-[#6B7280] font-medium">Médecins disponibles</span>
        </div>
        <div class="group bg-white rounded-2xl p-6 border border-[#E5E0D8] shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-1 text-center">
            <div class="flex items-center justify-center gap-3 mb-2">
                <div class="w-12 h-12 rounded-full bg-gradient-to-br from-[#A7C7E7] to-[#B8D4ED] flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                    <svg class="w-6 h-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.022.547c-1.511.793-2.528 2.329-2.528 4.097v4.714a1 1 0 001 1h16a1 1 0 001-1v-4.714c0-1.768-1.017-3.304-2.528-4.097z" />
                    </svg>
                </div>
                <span class="font-bold text-2xl text-[#4B5563]">{{ stats.specialites_count }}</span>
            </div>
            <span class="text-sm text-[#6B7280] font-medium">Spécialités</span>
        </div>
    </div>
    {% endif %}
</section>

<style>
@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}
.animate-fadeIn {
    animation: fadeIn 0.6s ease-out;
}

/* Responsive Design Optimizations */
@media (max-width: 768px) {
    .medecin-card {
        padding: 1.5rem !important;
        gap: 1.5rem !important;
    }
    
    .medecin-card .w-20 {
        width: 3rem !important;
        height: 3rem !important;
        font-size: 0.875rem !important;
    }
    
    .medecin-card h3 {
        font-size: 1.125rem !important;
    }
    
    .medecin-card .text-2xl {
        font-size: 1.5rem !important;
    }
    
    .medecin-card .px-6 {
        padding-left: 1rem !important;
        padding-right: 1rem !important;
    }
    
    .medecin-card .gap-6 {
        gap: 1rem !important;
    }
    
    .medecin-card .gap-8 {
        gap: 1.5rem !important;
    }
}

@media (max-width: 480px) {
    .medecin-card {
        padding: 1rem !important;
        gap: 1rem !important;
    }
    
    .medecin-card .w-20 {
        width: 2.5rem !important;
        height: 2.5rem !important;
        font-size: 0.75rem !important;
    }
    
    .medecin-card h3 {
        font-size: 1rem !important;
    }
    
    .medecin-card .text-2xl {
        font-size: 1.25rem !important;
    }
    
    .medecin-card .px-6 {
        padding-left: 0.75rem !important;
        padding-right: 0.75rem !important;
    }
    
    .medecin-card .py-3 {
        padding-top: 0.5rem !important;
        padding-bottom: 0.5rem !important;
    }
    
    .medecin-card .gap-2 {
        gap: 0.5rem !important;
    }
    
    .medecin-card .text-sm {
        font-size: 0.75rem !important;
    }
    
    .medecin-card .gap-3 {
        gap: 0.5rem !important;
    }
    
    .medecin-card .gap-4 {
        gap: 0.75rem !important;
    }
}

/* Tablet optimizations */
@media (min-width: 769px) and (max-width: 1024px) {
    .medecin-card {
        padding: 2rem !important;
        gap: 2rem !important;
    }
    
    .medecin-card .w-20 {
        width: 4rem !important;
        height: 4rem !important;
        font-size: 1rem !important;
    }
}

/* Hover effects for touch devices */
@media (hover: hover) {
    .medecin-card:hover {
        transform: translateY(-8px) !important;
    }
}

@media (hover: none) {
    .medecin-card {
        transform: none !important;
    }
    
    .medecin-card:active {
        transform: scale(0.98) !important;
        transition: transform 0.1s ease !important;
    }
}
</style>

<div class="flex flex-col lg:flex-row gap-8">
    <aside class="lg:w-80 shrink-0">
        <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] p-6 sticky top-4 hover:shadow-2xl transition-all duration-300">
            <div class="flex items-center justify-between mb-6">
                <h2 class="font-bold text-[#4B5563] text-lg flex items-center gap-2">
                    <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z" />
                    </svg>
                    Filtres
                </h2>
            </div>
            <div class="space-y-5">
                <div class="group">
                    <label for="filter-specialty" class="block font-semibold text-[#4B5563] mb-2 flex items-center gap-2">
                        <svg class="w-4 h-4 text-[#A7C7E7] group-hover:scale-110 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Spécialité
                    </label>
                    <select id="filter-specialty" class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-white text-[#6B7280] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent transition-all duration-200 hover:border-[#A7C7E7]">
                        <option value="">Toutes les spécialités</option>
                        {% for spec in specialites|default([]) %}
                        <option value="{{ spec }}">{{ spec }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="group">
                    <label for="filter-place" class="block font-semibold text-[#4B5563] mb-2 flex items-center gap-2">
                        <svg class="w-4 h-4 text-[#A7C7E7] group-hover:scale-110 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                        </svg>
                        Lieu
                    </label>
                    <input type="text" id="filter-place" placeholder="Ville ou adresse..." class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-white text-[#6B7280] placeholder-[#9CA3AF] focus:outline-none focus:ring-2 focus:ring-[#A7C7E7] focus:border-transparent transition-all duration-200 hover:border-[#A7C7E7]">
                </div>
            </div>
            <div class="mt-6 p-4 rounded-xl bg-gradient-to-r from-[#F5F1EB] to-[#FAF8F5] border border-[#E5E0D8] hover:shadow-md transition-all duration-300">
                <h3 class="font-semibold text-[#4B5563] mb-2 flex items-center gap-2">
                    <svg class="w-4 h-4 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    Besoin d'aide ?
                </h3>
                <p class="text-[#6B7280] text-sm">Choisissez un praticien puis cliquez sur « Prendre RDV » pour voir ses créneaux disponibles.</p>
            </div>
        </div>
    </aside>

    <div class="flex-1 min-w-0">
        <div class="flex flex-wrap items-center justify-center gap-4 mb-6 p-4 bg-white rounded-xl shadow-sm border border-[#E5E0D8] text-center">
            <p class="text-[#6B7280] flex items-center gap-2">
                <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656-.126-1.283-.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <span class="font-medium"><span id="medecins-count">{{ medecins|length }}</span> professionnel(s) disponible(s)</span>
                {% if current_filters.specialty or current_filters.location %}
                <span class="text-sm text-[#A7C7E7] ml-2 bg-[#A7C7E7]/10 px-2 py-1 rounded-full">(filtres appliqués)</span>
                {% endif %}
            </p>
            {% if current_filters.specialty or current_filters.location %}
            <a href="{{ path('user_appointments') }}" class="inline-flex items-center gap-2 text-sm text-[#A7C7E7] hover:text-[#4B5563] transition-colors duration-200">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Effacer les filtres
            </a>
            {% endif %}
        </div>
        <ul class="space-y-6" id="medecins-list">
            {% for medecin in medecins %}
            {% set spec = medecin.specialty|default('Spécialiste') %}
            {% set spec_class = spec matches '/psychiatre/i' or spec matches '/psychologue/i' ? 'bg-gradient-to-r from-emerald-100 to-emerald-200 text-emerald-800' : (spec matches '/orthophoniste/i' ? 'bg-gradient-to-r from-sky-100 to-sky-200 text-sky-800' : 'bg-gradient-to-r from-[#A7C7E7]/20 to-[#B8D4ED]/30 text-[#4B5563]') %}
            {% set initiales = ((medecin.nom|slice(0, 1)) ~ (medecin.prenom|slice(0, 1)))|upper|default('DR') %}
            <li class="medecin-card group bg-white rounded-3xl shadow-lg border border-[#E5E0D8] p-8 flex flex-col sm:flex-row gap-8 hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 animate-fadeIn" data-specialty="{{ spec }}" data-address="{{ medecin.address|default('')|lower }}" style="animation-delay: {{ loop.index0 * 0.1 }}s">
                <div class="flex items-center justify-center w-20 h-20 rounded-2xl bg-gradient-to-br from-[#A7C7E7] to-[#B8D4ED] text-white font-bold text-xl shadow-lg group-hover:scale-110 group-hover:rotate-3 transition-all duration-300 shrink-0">
                    {{ initiales }}
                </div>
                <div class="flex-1 min-w-0">
                    <div class="flex flex-wrap items-center gap-3 mb-3">
                        <h3 class="font-bold text-xl text-[#4B5563] group-hover:text-[#A7C7E7] transition-colors duration-300">Dr. {{ medecin.name }}</h3>
                        <span class="px-3 py-1.5 rounded-full text-sm font-medium {{ spec_class }} shadow-sm hover:shadow-md transition-shadow duration-300">{{ spec }}</span>
                    </div>
                    <p class="text-[#6B7280] text-sm mb-4 leading-relaxed">{{ medecin.description }}</p>
                    <div class="flex flex-wrap gap-6 text-sm text-[#6B7280] mb-4">
                        <span class="flex items-center gap-2 group-hover:text-[#A7C7E7] transition-colors duration-300">
                            <svg class="w-5 h-5 shrink-0 text-[#A7C7E7] group-hover:scale-110 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                            </svg>
                            {{ medecin.address }}
                        </span>
                        <span class="flex items-center gap-2 group-hover:text-[#A7C7E7] transition-colors duration-300">
                            <svg class="w-5 h-5 shrink-0 text-[#A7C7E7] group-hover:scale-110 transition-transform duration-200" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {{ medecin.experience_years }} ans d'expérience
                        </span>
                        <span class="flex items-center gap-2 group-hover:text-yellow-500 transition-colors duration-300">
                            <svg class="w-5 h-5 shrink-0 text-yellow-500 group-hover:scale-110 transition-transform duration-200" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                            </svg>
                            <span class="font-medium">{{ medecin.rating }}</span>
                            <span class="text-xs">({{ medecin.reviews }} avis)</span>
                        </span>
                    </div>
                    <div class="flex flex-wrap gap-3">
                        {% if medecin.has_cabinet %}
                        <span class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] text-sm hover:bg-[#E5E0D8] transition-colors duration-300">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 3.75h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z" />
                            </svg>
                            Cabinet
                        </span>
                        {% endif %}
                    </div>
                </div>
                <div class="sm:text-right shrink-0 flex flex-col justify-center gap-4">
                    <div class="space-y-2">
                        <p class="text-sm text-[#6B7280] flex items-center gap-2 sm:justify-end group-hover:text-[#A7C7E7] transition-colors duration-300">
