{% extends 'layouts/user.html.twig' %}

{% block title %}Accueil - AutiCare{% endblock %}

{% block user_content %}
{# Hero + message d'accueil #}
<section class="flex flex-col items-center justify-center text-center px-4 py-12 md:py-16">
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-[#E5E7EB] text-[#4B5563] text-sm font-medium mb-6">
        <svg class="w-5 h-5 text-[#6B7280]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" /></svg>
