{% extends 'layouts/user.html.twig' %}

{% block title %}Modules - AutiCare{% endblock %}

{% block user_content %}
<section class="text-center mb-10">
    <div class="inline-flex items-center justify-center w-16 h-16 rounded-full border-2 border-[#A7C7E7] bg-[#A7C7E7]/10 text-[#A7C7E7] mb-4">
        <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.256A8.967 8.967 0 016 18c2.295 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.256A8.967 8.967 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
        </svg>
    </div>
    <h1 class="text-3xl font-bold text-[#4B5563] mb-3">Modules Éducatifs</h1>
    <p class="text-[#6B7280] max-w-2xl mx-auto">
        Découvrez nos modules conçus pour accompagner les personnes atteintes de TSA et leurs familles.
    </p>
</section>

{% for message in app.flashes('success') %}
    <div class="mb-6 px-4 py-3 rounded-lg bg-emerald-50 border border-emerald-200 text-emerald-800">{{ message }}</div>
{% endfor %}

{% for message in app.flashes('error') %}
    <div class="mb-6 px-4 py-3 rounded-lg bg-red-50 border border-red-200 text-red-800">{{ message }}</div>
{% endfor %}

{% if modules|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {% for module in modules %}
            <div class="bg-white rounded-xl border border-[#E5E0D8] overflow-hidden hover:shadow-md transition-shadow">
                {% if module.image %}
                    <div class="aspect-video w-full overflow-hidden bg-[#E5E0D8]">
                        <img src="{{ asset(module.image) }}" alt="{{ module.titre }}" class="w-full h-full object-cover">
                    </div>
                {% else %}
                    <div class="aspect-video w-full overflow-hidden bg-[#E5E0D8] flex items-center justify-center">
                        <div class="text-[#6B7280] text-center px-4">
                            <svg class="w-12 h-12 mx-auto mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.256A8.967 8.967 0 016 18c2.295 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.256A8.967 8.967 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
                            </svg>
                            <p class="text-sm">Module</p>
                        </div>
                    </div>
                {% endif %}
                
                <div class="p-6">
                    <div class="flex items-center justify-between mb-3">
                        <span class="inline-block px-3 py-1 rounded-lg bg-[#A7C7E7]/30 text-[#4B5563] text-sm font-medium">
                            {{ module.niveau|capitalize }}
                        </span>
                        {% if module.categorie %}
                            <span class="inline-block px-3 py-1 rounded-lg bg-[#95d7b5]/30 text-[#4B5563] text-sm font-medium">
                                {{ module.categorie.label() }}
                            </span>
                        {% endif %}
                    </div>
                    
                    <h3 class="text-lg font-semibold text-[#4B5563] mb-2">{{ module.titre }}</h3>
                    <p class="text-[#6B7280] text-sm mb-4 line-clamp-3">{{ module.description }}</p>
                    
                    {% if module.dateCreation %}
                        <p class="text-[#6B7280] text-xs mb-4">Publié le {{ module.dateCreation|date('d/m/Y') }}</p>
                    {% endif %}
                    
                    <div class="flex gap-2">
                        <a href="{{ path('user_module_show', {'id': module.id}) }}" class="flex-1 text-center px-4 py-2 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
                            Voir
                        </a>
                        <a href="{{ path('user_module_edit', {'id': module.id}) }}" class="px-4 py-2 rounded-lg border border-[#E5E0D8] text-[#6B7280] font-medium hover:bg-[#F5F1EB] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
                            Modifier
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% else %}
    <div class="bg-white rounded-xl border border-[#E5E0D8] p-8 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 rounded-full border-2 border-[#A7C7E7] bg-[#A7C7E7]/10 text-[#A7C7E7] mb-4">
            <svg class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6.042A8.967 8.967 0 006 3.75c-1.052 0-2.062.18-3 .512v14.256A8.967 8.967 0 016 18c2.295 0 4.408.867 6 2.292m0-14.25a8.966 8.966 0 016-2.292c1.052 0 2.062.18 3 .512v14.256A8.967 8.967 0 0018 18a8.967 8.967 0 00-6 2.292m0-14.25v14.25" />
            </svg>
        </div>
        <h3 class="text-xl font-semibold text-[#4B5563] mb-2">Aucun module disponible</h3>
        <p class="text-[#6B7280] mb-4">
            Aucun module publié pour le moment. Revenez plus tard !
        </p>
        <a href="{{ path('home') }}" class="inline-block px-4 py-2.5 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
            Retour à l'accueil
        </a>
    </div>
{% endif %}
{% endblock %}
