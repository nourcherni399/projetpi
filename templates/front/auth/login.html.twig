{% extends 'layouts/user.html.twig' %}

{% block title %}Connexion - AutiCare{% endblock %}

{% block user_content %}
<div class="max-w-md mx-auto py-12">
    <div class="bg-white rounded-2xl shadow-lg border border-[#E5E0D8] p-8">
        <div class="flex justify-center mb-6">
            <span class="flex items-center justify-center w-14 h-14 rounded-full bg-[#A7C7E7] text-white">
                <svg class="w-7 h-7" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" /></svg>
            </span>
        </div>
        <h1 class="text-2xl font-bold text-[#4B5563] text-center mb-1">Connexion</h1>
        <p class="text-[#6B7280] text-center text-sm mb-6">Connectez-vous à votre compte AutiCare</p>

        {% if error %}
            <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg">
                <p class="text-red-600 text-sm">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
            </div>
        {% endif %}

        {% if app.flashes('error') %}
            <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg">
                {% for message in app.flashes('error') %}
                    <p class="text-red-600 text-sm">{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        {% if app.flashes('success') %}
            <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-lg">
                {% for message in app.flashes('success') %}
                    <p class="text-green-600 text-sm">{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}" class="space-y-4" novalidate>
            <div>
                <label for="email" class="block text-[#4B5563] font-medium mb-1">Adresse e-mail</label>
                <input
                    type="text"
                    id="email"
                    name="email"
                    value="{{ last_username }}"
                    placeholder="exemple@email.com"
                    autocomplete="email"
                    class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7] {% if errors.email is defined %}border-red-500 ring-2 ring-red-200{% endif %}"
                >
                {% if errors.email is defined %}
                <p class="mt-1 text-sm text-red-600">{{ errors.email }}</p>
                {% endif %}
            </div>
            <div>
                <div class="flex items-center justify-between mb-1">
                    <label for="password" class="block text-[#4B5563] font-medium">Mot de passe</label>
                    <a href="{{ path('app_forgot_password_request') }}" class="text-sm text-[#A7C7E7] hover:underline">Mot de passe oublié ?</a>
                </div>
                <div class="relative">
                    <input
                        type="password"
                        id="password"
                        name="password"
                        placeholder="Votre mot de passe"
                        autocomplete="current-password"
                        class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7] pr-10 {% if errors.password is defined %}border-red-500 ring-2 ring-red-200{% endif %}"
                    >
                    <button type="button" id="toggle-password" class="absolute right-3 top-1/2 -translate-y-1/2 text-[#6B7280] hover:text-[#4B5563] focus:outline focus:ring-2 focus:ring-[#A7C7E7] rounded p-0.5" aria-label="Afficher le mot de passe" title="Afficher le mot de passe">
                        <svg id="icon-eye-open" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                        <svg id="icon-eye-closed" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" /></svg>
                    </button>
                </div>
                {% if errors.password is defined %}
                <p class="mt-1 text-sm text-red-600">{{ errors.password }}</p>
                {% endif %}
                <script>
                (function() {
                    var input = document.getElementById('password');
                    var btn = document.getElementById('toggle-password');
                    var iconOpen = document.getElementById('icon-eye-open');
                    var iconClosed = document.getElementById('icon-eye-closed');
                    if (!btn || !input) return;
                    btn.addEventListener('click', function() {
                        var isPassword = input.type === 'password';
                        input.type = isPassword ? 'text' : 'password';
                        iconOpen.classList.toggle('hidden', !isPassword);
                        iconClosed.classList.toggle('hidden', isPassword);
                        btn.setAttribute('aria-label', isPassword ? 'Masquer le mot de passe' : 'Afficher le mot de passe');
                        btn.setAttribute('title', isPassword ? 'Masquer le mot de passe' : 'Afficher le mot de passe');
                    });
                })();
                </script>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {% if target_path|default('') is not empty %}
            <input type="hidden" name="_target_path" value="{{ target_path }}">
            {% endif %}

            <button type="submit" class="w-full py-3 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">Se connecter</button>

            <div class="relative my-6">
                <span class="absolute inset-0 flex items-center"><span class="w-full border-t border-[#E5E0D8]"></span></span>
                <span class="relative flex justify-center text-sm text-[#6B7280]">ou</span>
            </div>
            <a href="{{ path('app_connect_google_start') }}" class="flex items-center justify-center gap-2 w-full py-3 rounded-lg border-2 border-[#E5E0D8] bg-white text-[#4B5563] font-medium hover:bg-[#F5F1EB] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
                <svg class="w-5 h-5" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                Se connecter avec Google
            </a>
        </form>
        <p class="mt-6 text-center text-[#6B7280] text-sm">
            Pas encore de compte ? <a href="{{ path('register') }}" class="text-[#A7C7E7] hover:underline font-medium">Créer un compte</a>
        </p>
    </div>
</div>
{% endblock %}