{% extends 'layouts/user.html.twig' %}

{% block title %}Connexion - AutiCare{% endblock %}

{% block user_content %}
<div class="max-w-md mx-auto py-12">
    <div class="bg-white rounded-2xl shadow-lg border border-[#E5E0D8] p-8">
        <div class="flex justify-center mb-6">
            <span class="flex items-center justify-center w-14 h-14 rounded-full bg-[#A7C7E7] text-white">
                <svg class="w-7 h-7" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd" /></svg>
            </span>
        </div>
        <h1 class="text-2xl font-bold text-[#4B5563] text-center mb-1">Connexion</h1>
        <p class="text-[#6B7280] text-center text-sm mb-6">Connectez-vous à votre compte AutiCare</p>

        {% if app.session.flashbag.has('error') %}
            <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg">
                {% for message in app.session.flashbag.get('error') %}
                    <p class="text-red-600 text-sm">{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        {% if app.session.flashbag.has('success') %}
            <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-lg">
                {% for message in app.session.flashbag.get('success') %}
                    <p class="text-green-600 text-sm">{{ message }}</p>
                {% endfor %}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}" class="space-y-4">
            {% if target_path|default('') %}
            <input type="hidden" name="_target_path" value="{{ target_path }}">
            {% endif %}
            <div>
                <label for="email" class="block text-[#4B5563] font-medium mb-1">Adresse e-mail</label>
                <input type="email" id="email" name="email" value="{{ last_username|default('') }}" placeholder="exemple@email.com" class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7]" required>
            </div>
            <div>
                <div class="flex items-center justify-between mb-1">
                    <label for="password" class="block text-[#4B5563] font-medium">Mot de passe</label>
                    <a href="#" class="text-sm text-[#A7C7E7] hover:underline">Mot de passe oublié ?</a>
                </div>
                <div class="relative">
                    <input type="password" id="password" name="password" placeholder="Votre mot de passe" class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7] pr-10" required>
                    <button type="button" id="login-password-toggle" class="absolute right-3 top-1/2 -translate-y-1/2 text-[#6B7280] hover:text-[#4B5563] cursor-pointer" aria-label="Afficher le mot de passe">
                        <svg id="login-password-icon-eye" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /></svg>
                        <svg id="login-password-icon-eye-off" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" /></svg>
                    </button>
                </div>
            </div>
            <div class="flex items-center gap-2">
                <input type="checkbox" id="remember_me" name="_remember_me" class="rounded border-[#E5E0D8] text-[#A7C7E7] focus:ring-[#A7C7E7]">
                <label for="remember_me" class="text-[#6B7280] text-sm">Se souvenir de moi</label>
            </div>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <button type="submit" class="w-full py-3 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">Se connecter</button>
        </form>
        <p class="mt-6 text-center text-[#6B7280] text-sm">
            Pas encore de compte ? <a href="{{ path('register') }}" class="text-[#A7C7E7] hover:underline font-medium">Créer un compte</a>
        </p>
    </div>
</div>
<script>
(function() {
    var btn = document.getElementById('login-password-toggle');
    var input = document.getElementById('password');
    var eye = document.getElementById('login-password-icon-eye');
    var eyeOff = document.getElementById('login-password-icon-eye-off');
    if (!btn || !input) return;
    btn.addEventListener('click', function() {
        if (input.type === 'password') {
            input.type = 'text';
            btn.setAttribute('aria-label', 'Masquer le mot de passe');
            if (eye) eye.classList.add('hidden');
            if (eyeOff) eyeOff.classList.remove('hidden');
        } else {
            input.type = 'password';
            btn.setAttribute('aria-label', 'Afficher le mot de passe');
            if (eye) eye.classList.remove('hidden');
            if (eyeOff) eyeOff.classList.add('hidden');
        }
    });
})();
</script>
{% endblock %}
