{% extends 'layouts/user.html.twig' %}

{% block title %}Réinitialiser le mot de passe - AutiCare{% endblock %}

{% block user_content %}
<div class="max-w-md mx-auto py-12">
    <div class="bg-white rounded-2xl shadow-lg border border-[#E5E0D8] p-8">
        <div class="flex justify-center mb-6">
            <span class="flex items-center justify-center w-14 h-14 rounded-full bg-[#A7C7E7] text-white">
                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" /></svg>
            </span>
        </div>
        <h1 class="text-2xl font-bold text-[#4B5563] text-center mb-1">Nouveau mot de passe</h1>
        <p class="text-[#6B7280] text-center text-sm mb-6">Saisissez le code PIN reçu par e-mail et choisissez un nouveau mot de passe.</p>

        {% for message in app.flashes('success') %}
            <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-lg text-green-600 text-sm">{{ message }}</div>
        {% endfor %}
        {% if error %}
            <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg text-red-600 text-sm">{{ error }}</div>
        {% endif %}

        <form method="post" action="{{ path('app_forgot_password_reset') }}" class="space-y-4">
            <div>
                <label for="email" class="block text-[#4B5563] font-medium mb-1">Adresse e-mail</label>
                <input type="email" id="email" name="email" value="{{ email }}" required placeholder="exemple@email.com" autocomplete="email"
                    class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
            </div>
            <div>
                <label for="pin" class="block text-[#4B5563] font-medium mb-1">Code PIN (reçu par e-mail)</label>
                <input type="text" id="pin" name="pin" value="{{ pin }}" required placeholder="123456" maxlength="6" pattern="[0-9]{6}" autocomplete="one-time-code"
                    class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7] tracking-widest text-center text-xl">
            </div>
            <div>
                <label for="password" class="block text-[#4B5563] font-medium mb-1">Nouveau mot de passe</label>
                <input type="password" id="password" name="password" required minlength="6" placeholder="Au moins 6 caractères" autocomplete="new-password"
                    class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
            </div>
            <div>
                <label for="password_confirm" class="block text-[#4B5563] font-medium mb-1">Confirmer le mot de passe</label>
                <input type="password" id="password_confirm" name="password_confirm" required minlength="6" placeholder="Repéter le mot de passe" autocomplete="new-password"
                    class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
            </div>
            <button type="submit" class="w-full py-3 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">Réinitialiser le mot de passe</button>
        </form>

        <p class="mt-6 text-center text-[#6B7280] text-sm">
            <a href="{{ path('app_login') }}" class="text-[#A7C7E7] hover:underline font-medium">Retour à la connexion</a>
        </p>
    </div>
</div>
{% endblock %}
