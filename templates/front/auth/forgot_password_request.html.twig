{% extends 'layouts/user.html.twig' %}

{% block title %}Mot de passe oublié - AutiCare{% endblock %}

{% block user_content %}
<div class="max-w-md mx-auto py-12">
    <div class="bg-white rounded-2xl shadow-lg border border-[#E5E0D8] p-8">
        <div class="flex justify-center mb-6">
            <span class="flex items-center justify-center w-14 h-14 rounded-full bg-[#A7C7E7] text-white">
                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" /></svg>
            </span>
        </div>
        <h1 class="text-2xl font-bold text-[#4B5563] text-center mb-1">Mot de passe oublié</h1>
        <p class="text-[#6B7280] text-center text-sm mb-6">Indiquez votre adresse e-mail. Nous vous enverrons un code PIN pour réinitialiser votre mot de passe.</p>

        {% for message in app.flashes('error') %}
            <div class="mb-4 p-3 bg-red-50 border border-red-200 rounded-lg text-red-600 text-sm">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('info') %}
            <div class="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-lg text-blue-800 text-sm font-medium">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="mb-4 p-3 bg-green-50 border border-green-200 rounded-lg text-green-600 text-sm">{{ message }}</div>
        {% endfor %}

        {% if not sent %}
        <form method="post" action="{{ path('app_forgot_password_request') }}" class="space-y-4">
            <div>
                <label for="email" class="block text-[#4B5563] font-medium mb-1">Adresse e-mail</label>
                <input type="email" id="email" name="email" value="{{ email }}" required placeholder="exemple@email.com" autocomplete="email"
                    class="w-full px-4 py-2.5 rounded-lg border border-[#E5E0D8] bg-[#F5F1EB] text-[#6B7280] placeholder-[#9CA3AF] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
            </div>
            <button type="submit" class="w-full py-3 rounded-lg bg-[#A7C7E7] text-white font-medium hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">Envoyer le code PIN</button>
        </form>
        {% endif %}

        <p class="mt-6 text-center text-[#6B7280] text-sm">
            <a href="{{ path('app_login') }}" class="text-[#A7C7E7] hover:underline font-medium">Retour à la connexion</a>
        </p>
        {% if sent %}
        <div class="mt-6 p-4 bg-[#F5F1EB] rounded-xl border border-[#E5E0D8]">
            <p class="text-[#4B5563] font-medium mb-3">Prochaine étape :</p>
            <a href="{{ path('app_forgot_password_reset', { email: email }) }}" class="block w-full py-3 rounded-lg bg-[#A7C7E7] text-white font-medium text-center hover:bg-[#B8D4ED] focus:outline focus:ring-2 focus:ring-[#A7C7E7]">
                Saisir le code PIN et définir mon nouveau mot de passe
            </a>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
