{% extends 'layouts/user.html.twig' %}

{% block title %}Mon profil - AutiCare{% endblock %}

{% block user_content %}
<div class="max-w-2xl mx-auto py-12">
    <div class="mb-8 text-center">
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-gradient-to-br from-[#A7C7E7] to-[#B8D4ED] text-white shadow-lg mb-4">
            <svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
            </svg>
        </div>
        <h1 class="text-2xl font-bold text-[#4B5563]">Mon profil</h1>
        <p class="text-[#6B7280] mt-1">Modifiez vos informations personnelles</p>
    </div>

    {% if app.session.flashbag.has('success') %}
        <div class="mb-6 p-4 bg-emerald-50 border border-emerald-200 rounded-xl flex items-center gap-3">
            <span class="flex items-center justify-center w-10 h-10 rounded-full bg-emerald-100 text-emerald-600">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            </span>
            <div>
                {% for message in app.session.flashbag.get('success') %}
                    <p class="text-emerald-700 font-medium">{{ message }}</p>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="bg-white rounded-2xl shadow-xl border border-[#E5E0D8] overflow-hidden">
        <div class="px-8 py-6 bg-gradient-to-r from-[#A7C7E7]/10 to-transparent border-b border-[#E5E0D8]">
            <h2 class="text-lg font-semibold text-[#4B5563] flex items-center gap-2">
                <svg class="w-5 h-5 text-[#A7C7E7]" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Informations personnelles
            </h2>
            <p class="text-sm text-[#6B7280] mt-0.5">Vos données de base (nom, email, téléphone)</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'p-8 space-y-6'}}) }}
            {{ form_errors(form) }}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    {{ form_label(form.prenom, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                    {{ form_widget(form.prenom) }}
                    {{ form_errors(form.prenom) }}
                </div>
                <div>
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div>
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>

            <div>
                {{ form_label(form.telephone, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                {{ form_widget(form.telephone) }}
                {{ form_errors(form.telephone) }}
            </div>

            {% if form.dateNaissance is defined %}
                <div class="pt-6 border-t border-[#E5E0D8]">
                    <h3 class="text-base font-medium text-[#4B5563] mb-4 flex items-center gap-2">
                        <span class="w-1 h-5 rounded-full bg-[#A7C7E7]"></span>
                        Informations patient
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            {{ form_label(form.dateNaissance, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.dateNaissance) }}
                            {{ form_errors(form.dateNaissance) }}
                        </div>
                        <div>
                            {{ form_label(form.sexe, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.sexe) }}
                            {{ form_errors(form.sexe) }}
                        </div>
                        <div class="md:col-span-2">
                            {{ form_label(form.adresse, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.adresse) }}
                            {{ form_errors(form.adresse) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if form.relationAvecPatient is defined %}
                <div class="pt-6 border-t border-[#E5E0D8]">
                    <h3 class="text-base font-medium text-[#4B5563] mb-4 flex items-center gap-2">
                        <span class="w-1 h-5 rounded-full bg-[#A7C7E7]"></span>
                        Informations parent
                    </h3>
                    <div>
                        {{ form_label(form.relationAvecPatient, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                        {{ form_widget(form.relationAvecPatient) }}
                        {{ form_errors(form.relationAvecPatient) }}
                    </div>
                </div>
            {% endif %}

            {% if form.specialite is defined %}
                <div class="pt-6 border-t border-[#E5E0D8]">
                    <h3 class="text-base font-medium text-[#4B5563] mb-4 flex items-center gap-2">
                        <span class="w-1 h-5 rounded-full bg-[#A7C7E7]"></span>
                        Informations cabinet
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            {{ form_label(form.specialite, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.specialite) }}
                            {{ form_errors(form.specialite) }}
                        </div>
                        <div>
                            {{ form_label(form.nomCabinet, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.nomCabinet) }}
                            {{ form_errors(form.nomCabinet) }}
                        </div>
                        <div>
                            {{ form_label(form.telephoneCabinet, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.telephoneCabinet) }}
                            {{ form_errors(form.telephoneCabinet) }}
                        </div>
                        <div>
                            {{ form_label(form.tarifConsultation, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.tarifConsultation) }}
                            {{ form_errors(form.tarifConsultation) }}
                        </div>
                        <div class="md:col-span-2">
                            {{ form_label(form.adresseCabinet, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.adresseCabinet) }}
                            {{ form_errors(form.adresseCabinet) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="pt-6">
                {{ form_widget(form.submit) }}
            </div>
        {{ form_end(form) }}
    </div>

    {% if not is_granted('ROLE_ADMIN') and not is_granted('ROLE_MEDECIN') %}
    <div class="mt-10 bg-white rounded-2xl shadow-xl border border-[#E5E0D8] overflow-hidden">
        <div class="px-8 py-6 border-b border-[#E5E0D8] flex items-center gap-3">
            <span class="flex items-center justify-center w-10 h-10 rounded-xl bg-amber-100 text-amber-600">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" /></svg>
            </span>
            <div>
                <h2 class="text-lg font-semibold text-[#4B5563]">Désactiver mon compte</h2>
                <p class="text-sm text-[#6B7280]">Votre compte sera désactivé et vous serez déconnecté. Vous pourrez demander la réactivation en contactant l’équipe.</p>
            </div>
        </div>
        <div class="p-8">
            <form action="{{ path('user_profile_deactivate') }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir désactiver votre compte ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('user_deactivate') }}">
                <button type="submit" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl border border-amber-300 bg-amber-50 text-amber-800 font-medium hover:bg-amber-100 focus:outline focus:ring-2 focus:ring-amber-500 transition-colors">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" /></svg>
                    Désactiver mon compte
                </button>
            </form>
        </div>
    </div>
    {% endif %}

    <div class="mt-8 text-center">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_dashboard') }}" class="inline-flex items-center gap-2 text-[#6B7280] hover:text-[#A7C7E7] font-medium transition-colors">
        {% elseif is_granted('ROLE_MEDECIN') %}
            <a href="{{ path('doctor_dashboard') }}" class="inline-flex items-center gap-2 text-[#6B7280] hover:text-[#A7C7E7] font-medium transition-colors">
        {% else %}
            <a href="{{ path('home') }}" class="inline-flex items-center gap-2 text-[#6B7280] hover:text-[#A7C7E7] font-medium transition-colors">
        {% endif %}
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            {% if is_granted('ROLE_ADMIN') %}Retour au tableau de bord{% elseif is_granted('ROLE_MEDECIN') %}Retour au tableau de bord{% else %}Retour à l'accueil{% endif %}
        </a>
    </div>
</div>
