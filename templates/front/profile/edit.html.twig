{% extends 'layouts/user.html.twig' %}

{% block title %}Mon profil - AutiCare{% endblock %}

{% block user_content %}
<div class="max-w-2xl mx-auto py-10 px-4 sm:px-0">
    <div class="mb-10 text-center">
        <div class="inline-flex items-center justify-center w-24 h-24 rounded-2xl overflow-hidden bg-gradient-to-br from-[#A7C7E7] to-[#8BB8E0] text-white shadow-xl shadow-[#A7C7E7]/25 mb-5 ring-4 ring-white ring-offset-4 ring-offset-[#F5F1EB]">
            {% if user.image %}
                <img src="{{ asset(user.image) }}" alt="Photo de profil" class="w-full h-full object-cover">
            {% else %}
                <svg class="w-12 h-12" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
                </svg>
            {% endif %}
        </div>
        <h1 class="text-3xl font-bold text-[#374151] tracking-tight">Mon profil</h1>
        <p class="text-[#6B7280] mt-2 text-base">Modifiez vos informations personnelles</p>
    </div>

    {% if app.session.flashbag.has('success') %}
        <div class="mb-8 p-5 bg-emerald-50/90 border border-emerald-200/80 rounded-2xl flex items-center gap-4 shadow-sm">
            <span class="flex items-center justify-center w-12 h-12 rounded-xl bg-emerald-100 text-emerald-600 shrink-0">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" /></svg>
            </span>
            <div>
                {% for message in app.session.flashbag.get('success') %}
                    <p class="text-emerald-800 font-medium">{{ message }}</p>
                {% endfor %}
            </div>
        </div>
    {% endif %}

    <div class="bg-white rounded-3xl shadow-xl shadow-gray-200/50 border border-gray-100 overflow-hidden">
        <div class="px-8 py-7 bg-gradient-to-r from-[#A7C7E7]/15 via-[#A7C7E7]/5 to-transparent border-b border-gray-100">
            <h2 class="text-xl font-semibold text-[#374151] flex items-center gap-3">
                <span class="flex items-center justify-center w-10 h-10 rounded-xl bg-[#A7C7E7]/20 text-[#5B8FBF]">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                </span>
                Informations personnelles
            </h2>
            <p class="text-sm text-[#6B7280] mt-1">Vos données de base (nom, email, téléphone)</p>
        </div>

        {{ form_start(form, {'attr': {'class': 'p-8 sm:p-10 space-y-6', 'novalidate': 'novalidate'}}) }}
            {{ form_errors(form) }}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    {{ form_label(form.prenom, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                    {{ form_widget(form.prenom) }}
                    {{ form_errors(form.prenom) }}
                </div>
                <div>
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>

            <div>
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>

            <div>
                {{ form_label(form.telephone, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                {{ form_widget(form.telephone) }}
                {{ form_errors(form.telephone) }}
            </div>

            <div>
                {{ form_label(form.image, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                {% if user.image %}
                    <p class="text-sm text-[#6B7280] mb-2">Photo actuelle :</p>
                    <img src="{{ asset(user.image) }}" alt="Photo actuelle" class="w-20 h-20 rounded-xl object-cover border border-[#E5E0D8] mb-3">
                {% endif %}
                {{ form_widget(form.image) }}
                {{ form_errors(form.image) }}
            </div>

            {% if form.dateNaissance is defined %}
                <div class="pt-6 border-t border-[#E5E0D8]">
                    <h3 class="text-base font-medium text-[#4B5563] mb-4 flex items-center gap-2">
                        <span class="w-1 h-5 rounded-full bg-[#A7C7E7]"></span>
                        Informations patient
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            {{ form_label(form.dateNaissance, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.dateNaissance) }}
                            {{ form_errors(form.dateNaissance) }}
                        </div>
                        <div>
                            {{ form_label(form.sexe, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.sexe) }}
                            {{ form_errors(form.sexe) }}
                        </div>
                        <div class="md:col-span-2">
                            {{ form_label(form.adresse, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.adresse) }}
                            {{ form_errors(form.adresse) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            {% if form.relationAvecPatient is defined %}
                <div class="pt-6 border-t border-[#E5E0D8]">
                    <h3 class="text-base font-medium text-[#4B5563] mb-4 flex items-center gap-2">
                        <span class="w-1 h-5 rounded-full bg-[#A7C7E7]"></span>
                        Informations parent
                    </h3>
                    <div>
                        {{ form_label(form.relationAvecPatient, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                        {{ form_widget(form.relationAvecPatient) }}
                        {{ form_errors(form.relationAvecPatient) }}
                    </div>
                </div>
            {% endif %}

            {% if form.specialite is defined %}
                <div class="pt-6 border-t border-[#E5E0D8]">
                    <h3 class="text-base font-medium text-[#4B5563] mb-4 flex items-center gap-2">
                        <span class="w-1 h-5 rounded-full bg-[#A7C7E7]"></span>
                        Informations cabinet
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            {{ form_label(form.specialite, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.specialite) }}
                            {{ form_errors(form.specialite) }}
                        </div>
                        <div>
                            {{ form_label(form.nomCabinet, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.nomCabinet) }}
                            {{ form_errors(form.nomCabinet) }}
                        </div>
                        <div>
                            {{ form_label(form.telephoneCabinet, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.telephoneCabinet) }}
                            {{ form_errors(form.telephoneCabinet) }}
                        </div>
                        <div>
                            {{ form_label(form.tarifConsultation, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.tarifConsultation) }}
                            {{ form_errors(form.tarifConsultation) }}
                        </div>
                        <div class="md:col-span-2">
                            {{ form_label(form.adresseCabinet, null, {'label_attr': {'class': 'block text-[#4B5563] font-medium mb-2'}}) }}
                            {{ form_widget(form.adresseCabinet) }}
                            {{ form_errors(form.adresseCabinet) }}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="pt-8 flex justify-end">
                {{ form_widget(form.submit) }}
            </div>
        {{ form_end(form) }}
    </div>

    {% if not is_granted('ROLE_ADMIN') and not is_granted('ROLE_MEDECIN') %}
    <div class="mt-10 bg-white rounded-3xl shadow-xl shadow-gray-200/50 border border-gray-100 overflow-hidden">
        <div class="px-8 py-7 border-b border-gray-100 flex items-center gap-4 bg-amber-50/50">
            <span class="flex items-center justify-center w-12 h-12 rounded-xl bg-amber-100 text-amber-600 shrink-0">
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z" /></svg>
            </span>
            <div>
                <h2 class="text-xl font-semibold text-[#92400E]">Désactiver mon compte</h2>
                <p class="text-sm text-[#6B7280]">Votre compte sera désactivé et vous serez déconnecté. Vous pourrez demander la réactivation en contactant l’équipe.</p>
            </div>
        </div>
        <div class="p-8">
            <form action="{{ path('user_profile_deactivate') }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir désactiver votre compte ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('user_deactivate') }}">
                <button type="submit" class="inline-flex items-center gap-2 px-6 py-3 rounded-xl border-2 border-amber-300 bg-amber-50 text-amber-800 font-semibold hover:bg-amber-100 hover:border-amber-400 focus:outline focus:ring-2 focus:ring-amber-500 focus:ring-offset-2 transition-all duration-200">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636" /></svg>
                    Désactiver mon compte
                </button>
            </form>
        </div>
    </div>
    {% endif %}

    <div class="mt-10 text-center">
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('admin_dashboard') }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl text-[#6B7280] hover:text-[#A7C7E7] hover:bg-[#A7C7E7]/10 font-medium transition-all duration-200">
        {% elseif is_granted('ROLE_MEDECIN') %}
            <a href="{{ path('doctor_dashboard') }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl text-[#6B7280] hover:text-[#A7C7E7] hover:bg-[#A7C7E7]/10 font-medium transition-all duration-200">
        {% else %}
            <a href="{{ path('home') }}" class="inline-flex items-center gap-2 px-5 py-2.5 rounded-xl text-[#6B7280] hover:text-[#A7C7E7] hover:bg-[#A7C7E7]/10 font-medium transition-all duration-200">
        {% endif %}
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            {% if is_granted('ROLE_ADMIN') %}Retour au tableau de bord{% elseif is_granted('ROLE_MEDECIN') %}Retour au tableau de bord{% else %}Retour à l'accueil{% endif %}
        </a>
    </div>
</div>
{% endblock %}
