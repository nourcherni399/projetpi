    <script>
    // Mettre à jour le compteur du panier
    function updateCartCount() {
        fetch('{{ path('cart_index') }}', {
            headers: {
                'X-Requested-With': 'XMLHttpRequest'
            }
        })
        .then(response => response.text())
        .then(html => {
            const parser = new DOMParser();
            const doc = parser.parseFromString(html, 'text/html');
            const cartItems = doc.querySelectorAll('.cart-items-count');
            if (cartItems.length > 0) {
                const count = cartItems[0].textContent;
                const cartCountElement = document.getElementById('cart-count');
                if (cartCountElement) {
                    cartCountElement.textContent = count;
                    cartCountElement.style.display = count > 0 ? 'flex' : 'none';
                }
            }
        })
        .catch(error => console.error('Erreur lors de la mise à jour du panier:', error));
    }

    // Mettre à jour le compteur au chargement de la page
    document.addEventListener('DOMContentLoaded', updateCartCount);
    </script>
